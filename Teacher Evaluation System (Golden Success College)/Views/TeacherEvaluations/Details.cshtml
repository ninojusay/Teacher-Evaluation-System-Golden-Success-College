@model Teacher_Evaluation_System__Golden_Success_College_.ViewModels.EvaluationResultViewModel

@{
    ViewData["Title"] = "Evaluation Details";
    var isAdminOrSuperAdmin = User.IsInRole("Admin") || User.IsInRole("Super Admin");
    Layout = "_Layoutadmin";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-file-text"></i> Evaluation Details</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.EvaluationPeriod != null)
    {
        var period = ViewBag.EvaluationPeriod;
        <div class="card mb-4 border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event"></i> Evaluation Period Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <strong>Period Name:</strong>
                        <p class="mb-0">@period.PeriodName</p>
                    </div>
                    <div class="col-md-4">
                        <strong>Academic Year:</strong>
                        <p class="mb-0">@period.AcademicYear</p>
                    </div>
                    <div class="col-md-4">
                        <strong>Semester:</strong>
                        <p class="mb-0">@period.Semester</p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <strong>Period Duration:</strong>
                        <p class="mb-0">
                            @period.StartDate.ToString("MMM dd, yyyy") - @period.EndDate.ToString("MMM dd, yyyy")
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <p class="mb-0">
                            @{
                                var statusBadge = period.Status switch
                                {
                                    "Active" => "bg-success",
                                    "Upcoming" => "bg-info",
                                    "Completed" => "bg-secondary",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadge">@period.Status</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Evaluation Summary</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.TeacherPicturePath))
                    {
                        <img src="@Url.Content(Model.TeacherPicturePath)"
                             alt="Teacher Picture"
                             class="img-fluid rounded-circle"
                             style="width:150px;height:150px;object-fit:cover;">
                    }
                    else
                    {
                        <i class="bi bi-person-circle" style="font-size: 150px; color: #6c757d;"></i>
                    }
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-person"></i> Teacher:</strong>
                            <p class="mb-0">@Model.TeacherName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-building"></i> Department:</strong>
                            <p class="mb-0">@(Model.TeacherDepartment ?? "N/A")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-book"></i> Subject:</strong>
                            <p class="mb-0">@Model.SubjectName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-person-badge"></i> Student:</strong>
                            <p class="mb-0">
                                @Model.StudentName
                                @if (Model.IsAnonymous)
                                {
                                    <i class="bi bi-incognito text-warning ms-1" title="Anonymous Evaluation"></i>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-calendar"></i> Date Evaluated:</strong>
                            <p class="mb-0">@Model.DateEvaluated.ToString("MMMM dd, yyyy - hh:mm tt")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-shield-check"></i> Anonymous:</strong>
                            <p class="mb-0">
                                @if (Model.IsAnonymous)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Yes
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> No
                                    </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="alert-heading mb-0">
                                    <i class="bi bi-star-fill"></i> Overall Average Score
                                </h4>
                            </div>
                            @{
                                // FIX 1: Define variables using cast for comparison safety
                                var overallAvgDecimal = (decimal)Model.OverallAverage;
                                var overallBadgeClass = overallAvgDecimal >= 3.2m ? "success" :
                                overallAvgDecimal >= 2.4m ? "primary" :
                                overallAvgDecimal >= 1.2m ? "warning" : "danger";
                            }
                            <div>
                                <h2 class="mb-0">
                                    <span class="badge bg-@overallBadgeClass fs-3">
                                        @Model.OverallAverage.ToString("F2") / 4.00
                                    </span>
                                </h2>
                            </div>
                        </div>
                        <div class="progress mt-3" style="height: 30px;">
                            <div class="progress-bar bg-@overallBadgeClass"
                                 role="progressbar"
                                 {{-- FIX 2: Explicitly cast Model.OverallAverage to decimal before division --}}
                                 style="width: @(((decimal)Model.OverallAverage / 4.0m) * 100)%"
                                 aria-valuenow="@Model.OverallAverage"
                                 aria-valuemin="0"
                                 aria-valuemax="4">
                                <strong>@Model.OverallAverage.ToString("F2")</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @foreach (var criteria in Model.CriteriaResults)
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list-check"></i> @criteria.CriteriaName
                </h5>
                <span class="badge bg-light text-dark fs-6">
                    Average: @criteria.CriteriaAverage.ToString("F2") / 4.00
                </span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th style="width: 65%;">Question</th>
                                <th class="text-center" style="width: 15%;">Score</th>
                                <th class="text-center" style="width: 15%;">Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int questionNumber = 1;
                            }
                            @foreach (var question in criteria.Questions)
                            {
                                <tr>
                                    <td class="text-center">@questionNumber</td>
                                    <td>@question.Description</td>
                                    <td class="text-center">
                                        <span class="badge bg-@(question.ScoreValue >= 3.2m ? "success" :
                                                                                                               question.ScoreValue >= 2.4m ? "primary" :
                                                                                                               question.ScoreValue >= 1.2m ? "warning" : "danger") fs-6">
                                    @question.ScoreValue / 4
                                </span>
                            </td>
                            <td class="text-center">
                                @for (int i = 1; i <= 4; i++) // LOOP CHANGED to max 4
                                        {
                                            if (i <= question.ScoreValue)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                    </td>
                                </tr>
                                questionNumber++;
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="2" class="text-end"><strong>Criteria Average:</strong></td>
                                <td colspan="2" class="text-center">
                                    @{
                                        // FIX: Explicitly cast criteria.CriteriaAverage to decimal for safe comparison
                                        var criteriaAvgDecimal = (decimal)criteria.CriteriaAverage;

                                        var criteriaBadgeClass = criteriaAvgDecimal >= 3.2m ? "success" :
                                        criteriaAvgDecimal >= 2.4m ? "primary" :
                                        criteriaAvgDecimal >= 1.2m ? "warning" : "danger";
                                    }
                                    <span class="badge bg-@criteriaBadgeClass fs-6">
                                        @criteria.CriteriaAverage.ToString("F2") / 4.00
                                    </span>
                                </td>
                            </tr>
                        </tfoot>
                </table>
            </div>
        </div>
    </div>
        }

    @if (!string.IsNullOrEmpty(Model.Comments))
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Additional Comments</h5>
            </div>
            <div class="card-body">
                <p class="mb-0" style="white-space: pre-wrap;">@Model.Comments</p>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            @* <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a> *@
            @if (isAdminOrSuperAdmin)
            {
                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete Evaluation
                </button>
            }
        </div>
    </div>
</div>

@if (isAdminOrSuperAdmin)
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="fw-bold">Are you sure you want to delete this evaluation?</p>
                    <div class="alert alert-warning">
                        <strong>Teacher:</strong> @Model.TeacherName<br>
                        <strong>Subject:</strong> @Model.SubjectName<br>
                        <strong>Date:</strong> @Model.DateEvaluated.ToString("MMM dd, yyyy")
                    </div>
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Warning:</strong> This action cannot be undone!
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x"></i> Cancel
                    </button>
                    <form asp-action="Delete" asp-route-id="@Model.EvaluationId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Yes, Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">