@model Teacher_Evaluation_System__Golden_Success_College_.ViewModels.EvaluationResultViewModel

@{
    ViewData["Title"] = "Evaluation Details";
    var isAdminOrSuperAdmin = User.IsInRole("Admin") || User.IsInRole("Super Admin");
    Layout = "_Layoutadmin";
}

<div class="container-fluid mt-2 px-3">
    <div class="row mb-2">
        <div class="col-md-12 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-file-text"></i> Evaluation Details</h3>

            @* REPLACE WITH THIS *@
            @if (User.IsInRole("Student"))
            {
                <button onclick="history.back()" class="btn btn-sm btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
            }
            else
            {
                <button onclick="history.back()" class="btn btn-sm btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show py-2 mb-2" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.EvaluationPeriod != null)
    {
        var period = ViewBag.EvaluationPeriod;
        <div class="card mb-3 border-primary border-1">
            <div class="card-header bg-primary text-white py-2">
                <h6 class="mb-0">
                    <i class="bi bi-calendar-event"></i> Evaluation Period
                </h6>
            </div>
            <div class="card-body py-2 px-3">
                <div class="row g-2 small">
                    <div class="col-md-3">
                        <strong>Period:</strong>
                        <p class="mb-0">@period.PeriodName</p>
                    </div>
                    <div class="col-md-3">
                        <strong>Academic Year:</strong>
                        <p class="mb-0">@period.AcademicYear</p>
                    </div>
                    <div class="col-md-2">
                        <strong>Semester:</strong>
                        <p class="mb-0">@period.Semester</p>
                    </div>
                    <div class="col-md-4">
                        <strong>Duration:</strong>
                        <p class="mb-0">@period.StartDate.ToString("MMM dd") - @period.EndDate.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card mb-3">
        <div class="card-header bg-primary text-white py-2">
            <h6 class="mb-0"><i class="bi bi-info-circle"></i> Summary</h6>
        </div>
        <div class="card-body py-2 px-3">
            <div class="row g-2">
                <div class="col-md-2 text-center">
                    @if (!string.IsNullOrEmpty(Model.TeacherPicturePath))
                    {
                        <img src="@Url.Content(Model.TeacherPicturePath)"
                             alt="Teacher"
                             class="img-fluid rounded-circle"
                             style="width:80px;height:80px;object-fit:cover;">
                    }
                    else
                    {
                        <i class="bi bi-person-circle" style="font-size: 80px; color: #6c757d;"></i>
                    }
                </div>
                <div class="col-md-10">
                    <div class="row g-2 small">
                        <div class="col-md-6">
                            <strong><i class="bi bi-person"></i> Teacher:</strong>
                            <p class="mb-1">@Model.TeacherName</p>
                        </div>
                        <div class="col-md-6">
                            <strong><i class="bi bi-book"></i> Subject:</strong>
                            <p class="mb-1">@Model.SubjectName</p>
                        </div>
                        <div class="col-md-6">
                            <strong><i class="bi bi-building"></i> Dept:</strong>
                            <p class="mb-1">@(Model.TeacherDepartment ?? "N/A")</p>
                        </div>

                        @* ── FIXED: hide student name when anonymous ── *@
                        <div class="col-md-6">
                            <strong><i class="bi bi-person-badge"></i> Student:</strong>
                            <p class="mb-1">
                                @if (Model.IsAnonymous)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-incognito me-1"></i>Anonymous
                                    </span>
                                }
                                else
                                {
                                    @Model.StudentName
                                }
                            </p>
                        </div>

                        <div class="col-md-6">
                            <strong><i class="bi bi-calendar"></i> Date:</strong>
                            <p class="mb-1">@Model.DateEvaluated.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <strong><i class="bi bi-shield-check"></i> Anonymous:</strong>
                            <p class="mb-1">
                                @if (Model.IsAnonymous)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-12">
                    <div class="alert alert-info mb-0 py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="alert-heading mb-0">
                                    <i class="bi bi-star-fill"></i> Overall Average
                                </h6>
                            </div>
                            @{
                                var overallAvgDecimal = (decimal)Model.OverallAverage;
                                var overallBadgeClass = overallAvgDecimal >= 3.2m ? "success" :
                                overallAvgDecimal >= 2.4m ? "primary" :
                                overallAvgDecimal >= 1.2m ? "warning" : "danger";
                            }
                            <div>
                                <span class="badge bg-@overallBadgeClass fs-6">
                                    @Model.OverallAverage.ToString("F2") / 4.00
                                </span>
                            </div>
                        </div>
                        <div class="progress mt-2" style="height: 20px;">
                            <div class="progress-bar bg-@overallBadgeClass"
                                 role="progressbar"
                                 style="width: @(((decimal)Model.OverallAverage / 4.0m) * 100)%"
                                 aria-valuenow="@Model.OverallAverage"
                                 aria-valuemin="0"
                                 aria-valuemax="4">
                                <small class="fw-bold">@Model.OverallAverage.ToString("F2")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @foreach (var criteria in Model.CriteriaResults)
    {
        <div class="card mb-3">
            <div class="card-header bg-secondary text-white py-2 d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="bi bi-list-check"></i> @criteria.CriteriaName
                </h6>
                <span class="badge bg-light text-dark fs-7">
                    Avg: @criteria.CriteriaAverage.ToString("F2") / 4.00
                </span>
            </div>
            <div class="card-body py-2 px-3">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%; font-size: 0.85rem;">#</th>
                                <th style="width: 65%; font-size: 0.85rem;">Question</th>
                                <th class="text-center" style="width: 15%; font-size: 0.85rem;">Score</th>
                                <th class="text-center" style="width: 15%; font-size: 0.85rem;">Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int questionNumber = 1;
                            }
                            @foreach (var question in criteria.Questions)
                            {
                                <tr>
                                    <td class="text-center align-middle" style="font-size: 0.85rem;">@questionNumber</td>
                                    <td style="font-size: 0.85rem;">@question.Description</td>
                                    <td class="text-center align-middle">
                                        <span class="badge bg-@(question.ScoreValue >= 3.2m ? "success" :
                                                                                                              question.ScoreValue >= 2.4m ? "primary" :
                                                                                                              question.ScoreValue >= 1.2m ? "warning" : "danger") fs-7">
                                            @question.ScoreValue / 4
                                        </span>
                                    </td>
                                    <td class="text-center align-middle">
                                        @for (int i = 1; i <= 4; i++)
                                        {
                                            if (i <= question.ScoreValue)
                                            {
                                                <i class="bi bi-star-fill text-warning" style="font-size: 0.9rem;"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted" style="font-size: 0.9rem;"></i>
                                            }
                                        }
                                    </td>
                                </tr>
                                questionNumber++;
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="2" class="text-end" style="font-size: 0.85rem;"><strong>Criteria Avg:</strong></td>
                                <td colspan="2" class="text-center">
                                    @{
                                        var criteriaAvgDecimal = (decimal)criteria.CriteriaAverage;
                                        var criteriaBadgeClass = criteriaAvgDecimal >= 3.2m ? "success" :
                                        criteriaAvgDecimal >= 2.4m ? "primary" :
                                        criteriaAvgDecimal >= 1.2m ? "warning" : "danger";
                                    }
                                    <span class="badge bg-@criteriaBadgeClass fs-7">
                                        @criteria.CriteriaAverage.ToString("F2") / 4.00
                                    </span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Comments))
    {
        <div class="card mb-3">
            <div class="card-header bg-secondary text-white py-2">
                <h6 class="mb-0"><i class="bi bi-chat-left-text"></i> Comments</h6>
            </div>
            <div class="card-body py-2 px-3">
                <p class="mb-0 small" style="white-space: pre-wrap;">@Model.Comments</p>
            </div>
        </div>
    }

    @if (User.IsInRole("Student"))
    {
        <a asp-action="MyEvaluations" class="btn btn-sm btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-sm btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    }



    @if (User.IsInRole("Admin") || User.IsInRole("Super Admin"))
    {
        @*<button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>*@
    }
</div>
</div>
</div>


