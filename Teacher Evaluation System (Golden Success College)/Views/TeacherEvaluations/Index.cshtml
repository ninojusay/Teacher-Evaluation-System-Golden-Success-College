@model IEnumerable<Teacher_Evaluation_System__Golden_Success_College_.ViewModels.EvaluationListItemViewModel>

@{
    ViewData["Title"] = "Teacher Evaluations";
    var isStudent = User.IsInRole("Student");
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("Super Admin");
    Layout = "_Layoutadmin";
}

@{
    var teachersGroupIndex = Model
        .GroupBy(m => new { m.TeacherId, m.TeacherName, m.TeacherPicturePath, TeacherDepartment = m.TeacherDepartment ?? "" })
        .Select(g => new
        {
            TeacherId = g.Key.TeacherId,
            TeacherName = g.Key.TeacherName,
            TeacherPicturePath = string.IsNullOrEmpty(g.Key.TeacherPicturePath) ? "/images/default-teacher.png" : g.Key.TeacherPicturePath,
            TeacherDepartment = g.Key.TeacherDepartment ?? "",
            Average = g.Average(x => (decimal)x.AverageScore),
            UniqueStudents = g.Select(x => x.StudentName).Distinct().Count(),
            TotalEvaluations = g.Count(),
            Subjects = g.Select(x => x.SubjectName).Distinct().ToList()
        })
        .OrderByDescending(t => t.Average)
        .ToList();

    var rankedIndex = teachersGroupIndex.Select((t, idx) => new { Item = t, Rank = idx + 1 }).ToList();
    var distinctDepartments = teachersGroupIndex.Select(t => t.TeacherDepartment).Where(d => !string.IsNullOrWhiteSpace(d)).Distinct().OrderBy(d => d).ToList();

    string RatingLabel(decimal avg) => avg >= 3.2m ? "Excellent" : avg >= 2.4m ? "Good" : avg >= 1.2m ? "Fair" : "Poor";
    string RatingColor(decimal avg) => avg >= 3.2m ? "#27ae60" : avg >= 2.4m ? "#2e86de" : avg >= 1.2m ? "#f39c12" : "#e74c3c";
    string RatingBg(decimal avg) => avg >= 3.2m ? "#d4edda" : avg >= 2.4m ? "#e8f1fb" : avg >= 1.2m ? "#fef3c7" : "#f8d7da";
}

<style>
    :root {
        --primary: #1e3a5f;
        --accent: #2e86de;
        --accent-light: #e8f1fb;
        --success: #27ae60;
        --warning: #f39c12;
        --danger: #e74c3c;
        --surface: #ffffff;
        --surface-2: #f4f7fb;
        --border: #dce3ee;
        --text: #1a2535;
        --text-muted: #6b7c99;
        --shadow: 0 2px 12px rgba(30,58,95,0.08);
        --radius: 10px;
    }

    body {
        background: var(--surface-2);
    }

    /* ── Page Header ── */
    .page-header {
        background: linear-gradient(135deg, var(--primary) 0%, #2c5282 100%);
        color: #fff;
        border-radius: var(--radius);
        padding: 22px 28px;
        margin-bottom: 22px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 14px;
        box-shadow: 0 4px 20px rgba(30,58,95,0.2);
    }

        .page-header h1 {
            font-size: 1.6rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: -.3px;
        }

        .page-header .subtitle {
            font-size: .85rem;
            opacity: .75;
            margin-top: 3px;
        }

    .ph-badge {
        background: rgba(255,255,255,.18);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: .82rem;
        font-weight: 700;
    }

    /* ── Period Banner ── */
    .period-banner {
        border-radius: var(--radius);
        padding: 14px 20px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(135deg,#d1ecf1,#bee5eb);
        border-left: 4px solid var(--accent);
        box-shadow: var(--shadow);
    }

        .period-banner i {
            font-size: 1.3rem;
            color: var(--info,#2980b9);
        }

        .period-banner .pb-name {
            font-weight: 800;
            color: var(--primary);
            font-size: .95rem;
        }

        .period-banner .pb-sub {
            font-size: .82rem;
            color: var(--text-muted);
        }

    /* ── Stats Bar ── */
    .stats-bar {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .stat-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 13px 18px;
        flex: 1 1 120px;
        box-shadow: var(--shadow);
        display: flex;
        flex-direction: column;
        gap: 3px;
    }

        .stat-card .sv {
            font-size: 1.5rem;
            font-weight: 900;
            color: var(--primary);
            line-height: 1;
        }

        .stat-card .sl {
            font-size: .72rem;
            color: var(--text-muted);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: .06em;
        }

        .stat-card.exc .sv {
            color: var(--success);
        }

        .stat-card.avg .sv {
            color: var(--accent);
        }

    /* ── Filter Panel ── */
    .filter-panel {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 18px 22px;
        margin-bottom: 20px;
        box-shadow: var(--shadow);
    }

    .filter-title {
        font-size: .78rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: var(--text-muted);
        margin-bottom: 14px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .filter-search-wrap {
        position: relative;
        margin-bottom: 16px;
    }

        .filter-search-wrap input {
            width: 100%;
            border: 1.5px solid var(--border);
            border-radius: 8px;
            padding: 10px 40px 10px 14px;
            font-size: .9rem;
            outline: none;
            background: var(--surface-2);
            color: var(--text);
            transition: border-color .2s;
        }

            .filter-search-wrap input:focus {
                border-color: var(--accent);
                background: #fff;
            }

        .filter-search-wrap .si {
            position: absolute;
            right: 13px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            pointer-events: none;
        }

    .filter-groups {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        align-items: flex-start;
    }

    .fg {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .fg-label {
        font-size: .75rem;
        font-weight: 700;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: .07em;
    }

    .fg-btns {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }

    .fb {
        padding: 5px 12px;
        font-size: .82rem;
        border-radius: 20px;
        border: 1.5px solid var(--border);
        background: #fff;
        color: var(--text);
        cursor: pointer;
        transition: all .18s;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .fb:hover {
            border-color: var(--accent);
            color: var(--accent);
        }

        .fb.active {
            background: var(--primary);
            color: #fff;
            border-color: var(--primary);
        }

        .fb.clear {
            border-color: var(--danger);
            color: var(--danger);
        }

            .fb.clear:hover {
                background: var(--danger);
                color: #fff;
            }

    /* ── Results bar ── */
    .results-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 14px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .results-count {
        font-size: .88rem;
        color: var(--text-muted);
    }

        .results-count strong {
            color: var(--primary);
        }

    /* ── Teacher Cards ── */
    .teacher-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px,1fr));
        gap: 16px;
    }

    .t-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
        cursor: pointer;
        transition: transform .22s, box-shadow .22s;
        display: flex;
        flex-direction: column;
    }

        .t-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 28px rgba(30,58,95,.15);
        }

    .t-card-header {
        padding: 14px 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        border-bottom: 1px solid var(--border);
        background: var(--surface-2);
    }

    .t-avatar-wrap {
        position: relative;
        flex-shrink: 0;
    }

    .t-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2.5px solid var(--border);
    }

    .t-avatar-placeholder {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        font-size: 1rem;
    }

    .rank-badge {
        position: absolute;
        bottom: -2px;
        right: -4px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: .65rem;
        font-weight: 900;
        color: #fff;
        border: 2px solid #fff;
    }

    .t-info {
        flex: 1;
        min-width: 0;
    }

    .t-name {
        font-weight: 800;
        font-size: .95rem;
        color: var(--primary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 4px;
    }

    .t-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
    }

    .t-tag {
        font-size: .73rem;
        padding: 2px 7px;
        border-radius: 5px;
        font-weight: 600;
        background: var(--accent-light);
        color: var(--accent);
        display: inline-flex;
        align-items: center;
        gap: 3px;
    }

    .t-card-body {
        padding: 14px 16px;
        flex: 1;
    }

    .score-row {
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 10px;
    }

    .score-circle {
        width: 58px;
        height: 58px;
        border-radius: 50%;
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-weight: 900;
        font-size: 1.05rem;
        line-height: 1.1;
    }

        .score-circle .sc-sub {
            font-size: .58rem;
            font-weight: 600;
            opacity: .75;
        }

    .score-right {
        flex: 1;
    }

    .stars {
        display: flex;
        gap: 2px;
        margin-bottom: 6px;
    }

    .star-fill {
        color: var(--warning);
    }

    .star-empty {
        color: #d0d5dd;
    }

    .prog-track {
        background: #e9ecef;
        border-radius: 99px;
        height: 7px;
        overflow: hidden;
    }

    .prog-fill {
        height: 100%;
        border-radius: 99px;
    }

    .subjects-row {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
        margin-top: 10px;
    }

    .subj-tag {
        font-size: .72rem;
        padding: 2px 8px;
        border-radius: 5px;
        background: var(--surface-2);
        border: 1px solid var(--border);
        color: var(--text-muted);
        font-weight: 600;
    }

    .subj-more {
        background: #e2e3e5;
        color: #495057;
    }

    .t-card-footer {
        padding: 10px 16px;
        border-top: 1px solid var(--border);
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--surface-2);
    }

        .t-card-footer .meta-item {
            font-size: .78rem;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            gap: 4px;
        }

    .btn-details {
        padding: 5px 12px;
        border-radius: 7px;
        border: 1.5px solid var(--accent);
        background: #fff;
        color: var(--accent);
        font-size: .78rem;
        font-weight: 700;
        cursor: pointer;
        transition: all .15s;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        text-decoration: none;
    }

        .btn-details:hover {
            background: var(--accent);
            color: #fff;
        }

    /* Period status badge in card */
    .period-pill {
        padding: 3px 9px;
        border-radius: 20px;
        font-size: .72rem;
        font-weight: 700;
    }

    .pill-active {
        background: #d4edda;
        color: #155724;
    }

    .pill-upcoming {
        background: #d1ecf1;
        color: #0c5460;
    }

    .pill-completed {
        background: #e2e3e5;
        color: #383d41;
    }

    /* No results */
    .no-results {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-muted);
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
    }

        .no-results i {
            font-size: 3rem;
            display: block;
            margin-bottom: 12px;
            opacity: .3;
        }

    #toast {
        min-width: 280px;
        border-radius: 10px;
        box-shadow: 0 6px 24px rgba(0,0,0,.15);
    }

    #loadingOverlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(255,255,255,.82);
        z-index: 9999;
        place-items: center;
    }

        #loadingOverlay.show {
            display: grid;
        }

    @@media (max-width: 768px) {
        .teacher-grid {
            grid-template-columns: 1fr;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .filter-groups {
            flex-direction: column;
        }
    }

    /* ── Mobile: horizontal scroll for tables ── */
    @@media (max-width: 768px) {
        .group-table-wrapper, .table-panel {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .section-table, .level-table, .role-table,
        .user-table, .student-table, .subject-table,
        .teacher-table, .period-table {
            min-width: 520px;
        }

        .card-grid {
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .teacher-grid {
            grid-template-columns: 1fr;
        }

        .stats-bar {
            gap: 8px;
        }

        .stat-card {
            flex: 1 1 calc(50% - 8px);
            padding: 12px 14px;
        }

            .stat-card .stat-value, .stat-card .sv {
                font-size: 1.3rem;
            }

        .filter-panel {
            padding: 14px 16px;
        }

        .filter-row {
            flex-direction: column;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }

    @@media (max-width: 480px) {
        .card-grid {
            grid-template-columns: 1fr;
        }

        .page-header {
            padding: 16px 18px;
        }

            .page-header h1 {
                font-size: 1.3rem;
            }

        .stat-card {
            flex: 1 1 100%;
        }

        .filter-groups {
            flex-direction: column;
        }

        .fg-btns {
            flex-wrap: wrap;
        }
    }

    /* ═══ Bootstrap Integration Overrides ═══ */
    /* table-responsive works natively now - just ensure min-width for readability */
    .table-responsive .student-table,
    .table-responsive .subject-table,
    .table-responsive .teacher-table,
    .table-responsive .user-table,
    .table-responsive .section-table,
    .table-responsive .level-table,
    .table-responsive .role-table,
    .table-responsive .period-table {
        min-width: 520px;
    }

    /* page-header: Bootstrap d-flex handles layout, custom CSS handles design */
    .page-header {
        gap: 16px;
    }

    /* results-bar: Bootstrap d-flex handles layout */
    .results-bar {
        margin-bottom: 14px;
    }

    /* filter-row: Bootstrap d-flex gap-3 handles wrap */
    .filter-row {
        margin: 0;
    }

    /* stats-bar: Bootstrap d-flex flex-wrap handles layout */
    .stats-bar {
        margin-bottom: 20px;
    }

    /* Card grids use Bootstrap-friendly responsive sizing */
    @@media (max-width: 768px) {
        .card-grid {
            grid-template-columns: repeat(2, 1fr) !important;
            gap: 10px;
        }

        .teacher-grid {
            grid-template-columns: 1fr !important;
        }

        .stat-card {
            flex: 1 1 calc(50% - 8px);
        }

        .filter-panel {
            padding: 14px 16px;
        }

        .page-header h1 {
            font-size: 1.35rem;
        }
    }

    @@media (max-width: 480px) {
        .card-grid {
            grid-template-columns: 1fr !important;
        }

        .stat-card {
            flex: 1 1 100%;
        }

        .page-header {
            padding: 16px 18px;
        }

            .page-header h1 {
                font-size: 1.2rem;
            }

        .filter-group {
            flex: 1 1 100% !important;
        }

        .view-switcher .view-btn {
            padding: 6px 10px;
            font-size: .75rem;
        }
    }

</style>

<!-- Loading Overlay -->
<div id="loadingOverlay">
    <div class="text-center">
        <div class="spinner-border text-primary" style="width:3rem;height:3rem;"></div>
        <div class="mt-3 fw-bold text-primary">Loading...</div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index:11000">
    <div id="toast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<!-- Page Header -->
<div class="page-header d-flex align-items-center justify-content-between flex-wrap gap-3">
    <div>
        <h1>
            <i class="bi bi-clipboard-check-fill me-2"></i>Teacher Evaluations
            <span class="ph-badge ms-2" id="totalBadge">@rankedIndex.Count teacher@(rankedIndex.Count != 1 ? "s" : "")</span>
        </h1>
        <div class="subtitle">Ranked by average evaluation score</div>
    </div>
</div>

<!-- Current Period Banner -->
@if (ViewBag.CurrentPeriod != null)
{
    var cp = ViewBag.CurrentPeriod;
    <div class="period-banner">
        <i class="bi bi-calendar-event-fill"></i>
        <div>
            <div class="pb-name">@cp.PeriodName</div>
            <div class="pb-sub">@cp.Semester &bull; @cp.AcademicYear &bull; @cp.StartDate.ToString("MMM dd") – @cp.EndDate.ToString("MMM dd, yyyy")</div>
        </div>
        @{
            string pillClass = (cp.Status as string) == "Active" ? "pill-active" : (cp.Status as string) == "Upcoming" ? "pill-upcoming" : "pill-completed";
        }
        <span class="period-pill @pillClass ms-auto">@cp.Status</span>
    </div>
}

<!-- Stats Bar -->
@{
    var avgAll = rankedIndex.Any() ? rankedIndex.Average(r => r.Item.Average) : 0m;
    var excCount = rankedIndex.Count(r => RatingLabel(r.Item.Average) == "Excellent");
}
<div class="stats-bar d-flex flex-wrap gap-3 mb-4">
    <div class="stat-card">
        <div class="sv">@rankedIndex.Count</div>
        <div class="sl">Teachers</div>
    </div>
    <div class="stat-card exc">
        <div class="sv">@excCount</div>
        <div class="sl">Excellent</div>
    </div>
    <div class="stat-card avg">
        <div class="sv">@avgAll.ToString("F2")</div>
        <div class="sl">Avg Score</div>
    </div>
    <div class="stat-card">
        <div class="sv">@rankedIndex.Sum(r => r.Item.TotalEvaluations)</div>
        <div class="sl">Total Evaluations</div>
    </div>
</div>

<!-- Filter Panel -->
<div class="filter-panel">
    <div class="filter-title"><i class="bi bi-funnel-fill"></i> Search & Filter</div>
    <div class="filter-search-wrap">
        <input type="text" id="teacherSearchInput" placeholder="Search by teacher name or subject…" />
        <i class="bi bi-search si"></i>
    </div>
    <div class="filter-groups">
        <div class="fg">
            <div class="fg-label">Rating</div>
            <div class="fg-btns">
                <button class="fb filter-rating" data-rating="excellent"><i class="bi bi-star-fill" style="color:var(--warning)"></i> Excellent</button>
                <button class="fb filter-rating" data-rating="good"><i class="bi bi-star-fill" style="color:var(--accent)"></i> Good</button>
                <button class="fb filter-rating" data-rating="fair"><i class="bi bi-star-half" style="color:var(--warning)"></i> Fair</button>
                <button class="fb filter-rating" data-rating="poor"><i class="bi bi-star" style="color:var(--danger)"></i> Poor</button>
            </div>
        </div>
        @if (ViewBag.CurrentPeriod != null)
        {
            <div class="fg">
                <div class="fg-label">Status</div>
                <div class="fg-btns">
                    <button class="fb filter-status" data-status="active"><span style="width:8px;height:8px;border-radius:50%;background:var(--success);display:inline-block;"></span> Active</button>
                    <button class="fb filter-status" data-status="upcoming"><span style="width:8px;height:8px;border-radius:50%;background:var(--accent);display:inline-block;"></span> Upcoming</button>
                    <button class="fb filter-status" data-status="inactive"><span style="width:8px;height:8px;border-radius:50%;background:var(--danger);display:inline-block;"></span> Inactive</button>
                </div>
            </div>
        }
        <div class="fg">
            <div class="fg-label">Min. Evaluations</div>
            <div class="fg-btns">
                <button class="fb filter-evaluations" data-min="5">5+</button>
                <button class="fb filter-evaluations" data-min="10">10+</button>
                <button class="fb filter-evaluations" data-min="20">20+</button>
            </div>
        </div>
        @if (distinctDepartments.Any())
        {
            <div class="fg">
                <div class="fg-label">Department</div>
                <div class="fg-btns">
                    @foreach (var dept in distinctDepartments)
                    {
                        <button class="fb filter-department" data-department="@dept.ToLower()"><i class="bi bi-building"></i> @dept</button>
                    }
                </div>
            </div>
        }
        <div class="fg" style="margin-top:auto;">
            <div class="fg-label">&nbsp;</div>
            <div class="fg-btns">
                <button class="fb clear" id="clearFiltersBtn"><i class="bi bi-x-circle"></i> Clear All</button>
            </div>
        </div>
    </div>
</div>

<!-- Results Bar -->
<div class="results-bar d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
    <div class="results-count" id="resultsCount">Showing <strong>@rankedIndex.Count</strong> teacher@(rankedIndex.Count != 1 ? "s" : "")</div>
</div>

<!-- Teacher Cards Grid -->
<div class="teacher-grid" id="teacherCardsContainer">
    @foreach (var t in rankedIndex)
    {
        var item = t.Item;
        var rank = t.Rank;
        var rColor = RatingColor(item.Average);
        var rBg = RatingBg(item.Average);
        var rLabel = RatingLabel(item.Average);
        var badgeColor = rank == 1 ? "#d4af37" : rank == 2 ? "#a8a9ad" : rank == 3 ? "#cd7f32" : "";
        var subjectsData = string.Join(",", item.Subjects).ToLower();
        var currentStatus = (ViewBag.CurrentPeriod?.Status as string ?? "").ToLower();
        var pillCls = currentStatus == "active" ? "pill-active" : currentStatus == "upcoming" ? "pill-upcoming" : "pill-completed";
        var initials = string.Join("", item.TeacherName.Split(' ').Take(2).Select(w => w.Length > 0 ? w[0].ToString().ToUpper() : ""));

        <div class="t-card teacher-card-item"
             data-teacher-name="@item.TeacherName.ToLower()"
             data-subjects="@subjectsData"
             data-rating="@rLabel.ToLower()"
             data-score="@item.Average"
             data-evaluations="@item.TotalEvaluations"
             data-status="@currentStatus"
             data-department="@item.TeacherDepartment.ToLower()"
             data-teacher-url="">

            <!-- Header -->
            <div class="t-card-header">
                <div class="d-flex align-items-center gap-3" style="min-width:0;flex:1;">
                    <div class="t-avatar-wrap">
                        <img src="@Url.Content(item.TeacherPicturePath)"
                             class="t-avatar"
                             alt="@item.TeacherName"
                             onerror="this.style.display='none';this.nextElementSibling.style.display='flex';" />
                        <div class="t-avatar-placeholder" style="display:none;">@initials</div>
                        @if (rank <= 3 && !string.IsNullOrEmpty(badgeColor))
                        {
                            <div class="rank-badge" style="background:@badgeColor;">@rank</div>
                        }
                    </div>
                    <div class="t-info">
                        <div class="t-name">@item.TeacherName</div>
                        <div class="t-meta">
                            @if (!string.IsNullOrEmpty(item.TeacherDepartment))
                            {
                                <span class="t-tag"><i class="bi bi-building"></i>@item.TeacherDepartment</span>
                            }
                            @if (ViewBag.CurrentPeriod != null)
                            {
                                <span class="period-pill @pillCls">@(ViewBag.CurrentPeriod.Status)</span>
                            }
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("TeacherDetails", "TeacherEvaluations", new { teacherId = item.TeacherId })"
                   class="btn-details" onclick="event.stopPropagation();">
                    <i class="bi bi-file-earmark-text"></i> Details
                </a>
            </div>

            <!-- Body -->
            <div class="t-card-body">
                <div class="score-row">
                    <div class="score-circle" style="background:@rBg;color:@rColor;">
                        @item.Average.ToString("F2")
                        <div class="sc-sub">/ 4.00</div>
                    </div>
                    <div class="score-right">
                        <div class="stars">
                            @for (int i = 1; i <= 4; i++)
                            {
                                if (i <= (int)Math.Round(item.Average))
                                {
                                    <i class="bi bi-star-fill star-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star star-empty"></i>
                                }
                            }
                            <span style="font-size:.75rem;color:var(--text-muted);margin-left:4px;font-weight:700;">@rLabel</span>
                        </div>
                        <div class="prog-track">
                            <div class="prog-fill" style="width:@((double)(item.Average / 4.0m) * 100)%;background:@rColor;"></div>
                        </div>
                    </div>
                </div>

                <div class="subjects-row">
                    @foreach (var subj in item.Subjects.Take(3))
                    {
                        <span class="subj-tag">@subj.Split('-')[0].Trim()</span>
                    }
                    @if (item.Subjects.Count > 3)
                    {
                        <span class="subj-tag subj-more">+@(item.Subjects.Count - 3) more</span>
                    }
                </div>
            </div>

            <!-- Footer -->
            <div class="t-card-footer">
                <span class="meta-item"><i class="bi bi-people-fill"></i> @item.UniqueStudents student@(item.UniqueStudents != 1 ? "s" : "")</span>
                <span class="meta-item"><i class="bi bi-card-list"></i> @item.TotalEvaluations evaluation@(item.TotalEvaluations != 1 ? "s" : "")</span>
                @*<a href="@Url.Action("ByTeacher", "TeacherEvaluations", new { teacherId = item.TeacherId })"
                   class="meta-item" style="text-decoration:none;color:var(--accent);font-weight:700;" onclick="event.stopPropagation();">
                    <i class="bi bi-arrow-right-circle"></i> View All
                </a>*@
            </div>
        </div>
    }
</div>

<!-- No Results -->
<div class="no-results d-none" id="noResultsMessage">
    <i class="bi bi-search"></i>
    <div class="fw-bold">No teachers found</div>
    <div class="small mt-1">Try adjusting your search or filters</div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <script>
        $(function () {

            /* ── Filter state ── */
            var activeFilters = { ratings:[], statuses:[], evaluations:[], departments:[] };

            /* ── Apply all filters + search ── */
            function applyAll() {
                var search  = $('#teacherSearchInput').val().toLowerCase().trim();
                var visible = 0;

                $('.teacher-card-item').each(function () {
                    var $c   = $(this);
                    var name = $c.data('teacher-name') || '';
                    var subj = String($c.data('subjects') || '');
                    var rat  = $c.data('rating')  || '';
                    var evs  = parseInt($c.data('evaluations')) || 0;
                    var sta  = $c.data('status')   || '';
                    var dep  = String($c.data('department') || '');

                    var ok = true;
                    if (search && !name.includes(search) && !subj.includes(search)) ok = false;
                    if (ok && activeFilters.ratings.length     && !activeFilters.ratings.includes(rat)) ok = false;
                    if (ok && activeFilters.statuses.length    && !activeFilters.statuses.includes(sta)) ok = false;
                    if (ok && activeFilters.departments.length && !activeFilters.departments.includes(dep)) ok = false;
                    if (ok && activeFilters.evaluations.length) {
                        ok = activeFilters.evaluations.some(function(m) { return evs >= m; });
                    }

                    $c.toggle(ok);
                    if (ok) visible++;
                });

                $('#resultsCount').html(`Showing <strong>${visible}</strong> teacher${visible !== 1 ? 's' : ''}`);
                $('#noResultsMessage').toggleClass('d-none', visible > 0);
            }

            /* ── Toggle filter button ── */
            function toggleFilter(arr, val, $btn) {
                $btn.toggleClass('active');
                var idx = arr.indexOf(val);
                if (idx === -1) arr.push(val);
                else arr.splice(idx, 1);
                applyAll();
            }

            $('#teacherSearchInput').on('input', applyAll);

            $(document).on('click', '.filter-rating',     function () { toggleFilter(activeFilters.ratings,     $(this).data('rating'), $(this)); });
            $(document).on('click', '.filter-status',     function () { toggleFilter(activeFilters.statuses,    $(this).data('status'), $(this)); });
            $(document).on('click', '.filter-department', function () { toggleFilter(activeFilters.departments,  $(this).data('department'), $(this)); });
            $(document).on('click', '.filter-evaluations',function () { toggleFilter(activeFilters.evaluations,  parseInt($(this).data('min')), $(this)); });

            $('#clearFiltersBtn').on('click', function () {
                activeFilters = { ratings:[], statuses:[], evaluations:[], departments:[] };
                $('.fb').removeClass('active');
                $('#teacherSearchInput').val('');
                applyAll();
            });

            /* ── Click card to navigate ── */
            $(document).on('click', '.t-card', function (e) {
                var el = e.target;
                while (el && el !== this) {
                    if (el.tagName === 'A' || el.tagName === 'BUTTON') return;
                    el = el.parentElement;
                }
                var url = $(this).data('teacher-url');
                if (url) window.location.href = url;
            });

            /* ── TempData toasts ── */
            function showToast(msg, type) {
                var cls = { success:'bg-success text-white', danger:'bg-danger text-white', info:'bg-info text-white' };
                $('#toast').removeClass('bg-success bg-danger bg-info text-white').addClass(cls[type]||cls.success);
                $('#toastMessage').text(msg);
                new bootstrap.Toast($('#toast')[0], { delay:4500 }).show();
            }


            /* ── Auto-switch: on mobile show cards (already card-only), shrink filters ── */
            function checkMobileTEView() {
                if ($(window).width() <= 768) {
                    // teacher-grid already goes 1-col via CSS, just ensure filters work
                    $('.fg-btns').css('flex-wrap','wrap');
                }
            }
            checkMobileTEView();
            var tResizeTimer;
            $(window).on('resize', function() {
                clearTimeout(tResizeTimer);
                tResizeTimer = setTimeout(checkMobileTEView, 250);
            });
            @if (TempData["SuccessMessage"] != null)
            {
                <text>showToast('@Html.Raw(TempData["SuccessMessage"])', 'success');</text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>showToast('@Html.Raw(TempData["ErrorMessage"])',   'danger');</text>
            }
            @if (TempData["InfoMessage"] != null)
            {
                <text>showToast('@Html.Raw(TempData["InfoMessage"])',    'info');</text>
            }
        });
    </script>
}
