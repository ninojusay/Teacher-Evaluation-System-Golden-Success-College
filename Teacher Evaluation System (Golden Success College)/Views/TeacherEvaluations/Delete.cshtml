@model Teacher_Evaluation_System__Golden_Success_College_.ViewModels.EvaluationListItemViewModel

@{
    ViewData["Title"] = "Delete Evaluation";
    Layout = "_Layoutadmin";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Evaluation
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning border-warning">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-circle"></i> Warning!
                        </h5>
                        <p class="mb-0">
                            Are you sure you want to delete this evaluation? This action cannot be undone.
                        </p>
                    </div>

                    <h4 class="mb-4">Evaluation Details:</h4>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="text-muted small">Evaluation ID</label>
                                    <p class="mb-0 fw-bold">#@Model.EvaluationId</p>
                                </div>
                                <div class="col-md-8">
                                    <label class="text-muted small">Date Evaluated</label>
                                    <p class="mb-0 fw-bold">@Model.DateEvaluated.ToString("MMMM dd, yyyy - hh:mm tt")</p>
                                </div>
                            </div>

                            <hr />

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="text-muted small">Teacher</label>
                                    <p class="mb-0 fw-bold">
                                        @if (!string.IsNullOrEmpty(Model.TeacherPicturePath))
                                        {
                                            <img src="@Model.TeacherPicturePath" alt="Teacher"
                                                 class="rounded-circle me-2"
                                                 style="width: 30px; height: 30px; object-fit: cover;">
                                        }
                                        @Model.TeacherName
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">Subject</label>
                                    <p class="mb-0 fw-bold">@Model.SubjectName</p>
                                </div>
                            </div>

                            <hr />

                            <div class="row">
                                <div class="col-md-6">
                                    <label class="text-muted small">Student</label>
                                    <p class="mb-0">
                                        @if (Model.IsAnonymous)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-user-secret"></i> Anonymous
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold">@Model.StudentName</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">Submission Type</label>
                                    <p class="mb-0">
                                        @if (Model.IsAnonymous)
                                        {
                                            <span class="badge bg-secondary">Anonymous Submission</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Named Submission</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EvaluationId" />

                        <div class="alert alert-danger">
                            <p class="mb-2">
                                <strong>This will permanently delete:</strong>
                            </p>
                            <ul class="mb-0">
                                <li>The evaluation record</li>
                                <li>All question scores and ratings</li>
                                <li>Any comments provided</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg"
                                    onclick="return confirm('Are you absolutely sure? This cannot be undone!')">
                                <i class="fas fa-trash-alt"></i> Yes, Delete This Evaluation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add additional confirmation before form submission
        $('form').on('submit', function(e) {
            var confirmed = confirm('Final confirmation: Delete this evaluation permanently?');
            if (!confirmed) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}