@* ── ADDED: wrap original card section in #cardView for toggle ── *@
<div id="cardView">
    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle fs-4"></i>
                    <p class="mb-0 mt-2">No subject attended  found. Click "Create  Subjects Attended" to get started.</p>
                </div>
            </div>
        }
        else
        {
