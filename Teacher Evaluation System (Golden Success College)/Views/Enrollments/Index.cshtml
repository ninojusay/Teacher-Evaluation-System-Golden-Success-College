@* ADDED: Stats Bar *@
@{
    var totalStudents = Model.Select(e => e.StudentId).Distinct().Count();
    var totalSubjectsCount = 0;
    if (ViewBag.EnrollmentCounts is Dictionary<int, int> ecStat)
        totalSubjectsCount = ecStat.Values.Sum();
}
<div class="stats-bar">
    <div class="stat-card">
        <div class="stat-value">@totalStudents</div>
        <div class="stat-label">Students</div>
    </div>
    <div class="stat-card s-accent">
        <div class="stat-value">@totalSubjectsCount</div>
        <div class="stat-label">Total Subjects</div>
    </div>
    <div class="stat-card s-success">
        <div class="stat-value">@(ViewBag.SelectedLevelId != null ? "Filtered" : "All")</div>
        <div class="stat-label">View</div>
    </div>
</div>

@* ADDED: Filter Panel wrapper around the original filter controls *@
@if (userRole == "Admin" || userRole == "Super Admin")
{
    <div class="filter-panel">
        <div class="filter-title"><i class="bi bi-funnel-fill"></i> Filter Enrollments</div>
        <div class="d-flex gap-2">
            <select class="form-select" id="filterLevel" style="width: 200px;">
                <option value="">All Levels</option>
                @foreach (var level in ViewBag.Levels as SelectList)
                {
                    if (selectedLevelId?.ToString() == level.Value)
                    {
                        <option value="@level.Value" selected>@level.Text</option>
                    }
                    else
                    {
                        <option value="@level.Value">@level.Text</option>
                    }
                }
            </select>
            <select class="form-select" id="filterSection" style="width: 250px;" disabled>
                <option value="">All Sections</option>
            </select>
            <button class="btn btn-secondary" id="btnClearFilters">
                <i class="bi bi-x-circle"></i> Clear
            </button>
        </div>
    </div>
}

@* ── ADDED: Search + Toggle bar ── *@
