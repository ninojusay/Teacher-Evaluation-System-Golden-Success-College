    <div class="toggle-btn-group d-flex gap-2 ms-auto">
        <button class="btn btn-primary" id="btnShowCards" title="Card View">
            <i class="bi bi-grid-3x3-gap-fill"></i> Cards
        </button>
        <button class="btn btn-outline-primary" id="btnShowTable" title="Table View">
            <i class="bi bi-table"></i> Table
        </button>
    </div>
    <small class="text-muted" id="enrollSearchCount"></small>
</div>

@* ── ADDED: Table view (hidden by default) ── *@
<div id="tableView">
    @if (Model.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="ps-3">#</th>
                                <th>Student Name</th>
                                <th>Level</th>
                                <th>Section</th>
                                <th class="text-center">Subjects Attended</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNum = 1;
                            }
                            @foreach (var item in Model)
                            {
                                var tblCount = 0;
                                if (ViewBag.EnrollmentCounts is Dictionary<int, int> tblCounts && tblCounts.ContainsKey(item.StudentId))
                                    tblCount = tblCounts[item.StudentId];
                                <tr class="enroll-table-row"
                                    data-name="@item.Student?.FullName?.ToLower()"
                                    data-level="@item.Student?.Section?.Level?.LevelName?.ToLower()"
                                    data-section="@item.Student?.Section?.SectionName?.ToLower()">
                                    <td class="ps-3 align-middle text-muted">@rowNum</td>
                                    <td class="align-middle fw-semibold">@item.Student?.FullName</td>
                                    <td class="align-middle">
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-building me-1"></i>@item.Student?.Section?.Level?.LevelName
                                        </span>
                                    </td>
                                    <td class="align-middle">@item.Student?.Section?.SectionName</td>
                                    <td class="text-center align-middle">
                                        <span class="badge bg-primary">@tblCount Subject@(tblCount != 1 ? "s" : "")</span>
                                    </td>
                                    <td class="text-center align-middle">
                                        <button class="btn btn-sm btn-info btn-view-details text-white"
                                                data-student-id="@item.StudentId"
                                                data-student-name="@item.Student?.FullName">
                                            <i class="bi bi-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                                rowNum++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div id="noTableResults" class="alert alert-warning text-center" style="display:none;">
            <i class="bi bi-search"></i> No students match your search.
        </div>
    }
</div>
@* ── END ADDED table view ── *@

