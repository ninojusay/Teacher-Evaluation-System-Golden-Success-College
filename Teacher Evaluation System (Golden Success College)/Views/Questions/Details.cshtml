@model Teacher_Evaluation_System__Golden_Success_College_.ViewModels.QuestionIndexViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "_Layoutadmin";
}
<h1>Details</h1>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Criteria
        </dt>
        <dd class="col-sm-10">
            @Model.CriteriaName
        </dd>
        <dt class="col-sm-2">
            Descriptions
        </dt>
        <dd class="col-sm-10">
            <ol>
                @for (int i = 0; i < Model.Descriptions.Count; i++)
                {
                    <div>@Model.Descriptions[i]</div>
                }
            </ol>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.QuestionIds.First()">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>