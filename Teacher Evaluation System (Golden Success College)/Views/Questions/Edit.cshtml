@model List<Teacher_Evaluation_System__Golden_Success_College_.Models.Question>
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layoutadmin";
}
<h1>Edit Question</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Hidden field for the first question ID (used for routing) *@
            <input type="hidden" name="id" value="@Model.First().QuestionId" />

            <div class="form-group">
                <label class="control-label">CriteriaId</label>
                <select name="CriteriaId" class="form-control" asp-items="ViewBag.CriteriaId"></select>
            </div>

            <div class="form-group">
                <label>Descriptions</label>
                <div id="descriptionContainer">
                    @foreach (var question in Model)
                    {
                        <div class="input-group mb-2 description-item">
                            <input name="Description" class="form-control" value="@question.Description" />
                            <input type="hidden" name="QuestionIds" value="@question.QuestionId" />
                            <button type="button" class="btn btn-danger btn-sm remove-btn">Remove</button>
                        </div>
                    }
                </div>
                <button type="button" id="addDescription" class="btn btn-success btn-sm">Add Description</button>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#addDescription").click(function () {
                var newInput = `<div class="input-group mb-2 description-item">
                                    <input name="Description" class="form-control" />
                                    <input type="hidden" name="QuestionIds" value="0" />
                                    <button type="button" class="btn btn-danger btn-sm remove-btn">Remove</button>
                                </div>`;
                $("#descriptionContainer").append(newInput);
            });

            $(document).on("click", ".remove-btn", function () {
                $(this).closest(".description-item").remove();
            });
        });
    </script>
}