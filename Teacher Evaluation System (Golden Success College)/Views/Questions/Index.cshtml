@model IEnumerable<Teacher_Evaluation_System__Golden_Success_College_.ViewModels.QuestionIndexViewModel>
@{
    ViewData["Title"] = "Questions";
    Layout = "_Layoutadmin";
}

@* ═══════════════════════════════════════════════════════════
   UI STYLES — CSS ONLY, ZERO LOGIC CHANGES
   Uses exact same design tokens as EvaluationIndex.cshtml
   ═══════════════════════════════════════════════════════════ *@
<style>
    /* ── Design tokens (copied exactly from EvaluationIndex) ── */
    :root {
        --primary: #1e3a5f;
        --accent: #2e86de;
        --accent-light: #e8f1fb;
        --success: #27ae60;
        --warning: #f39c12;
        --danger: #e74c3c;
        --surface: #ffffff;
        --surface-2: #f4f7fb;
        --border: #dce3ee;
        --text: #1a2535;
        --text-muted: #6b7c99;
        --shadow: 0 2px 12px rgba(30,58,95,0.08);
        --radius: 10px;
    }

    /* ── Page title — matches .page-header from EvaluationIndex ── */
    h1 {
        background: linear-gradient(135deg, var(--primary) 0%, #2c5282 100%);
        color: #fff;
        border-radius: var(--radius);
        padding: 22px 28px;
        margin-bottom: 22px;
        font-size: 1.6rem;
        font-weight: 700;
        letter-spacing: -.3px;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 20px rgba(30,58,95,0.2);
    }

    /* ── Create button — matches EvaluationIndex action buttons ── */
    #btnCreateQuestion {
        background: linear-gradient(135deg, var(--primary) 0%, #2c5282 100%);
        border: none;
        border-radius: 8px;
        padding: 9px 20px;
        font-weight: 600;
        letter-spacing: .3px;
        box-shadow: 0 4px 14px rgba(30,58,95,0.25);
        transition: transform .15s ease, box-shadow .15s ease;
        color: #fff;
    }

        #btnCreateQuestion:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(30,58,95,0.35);
            color: #fff;
        }

        #btnCreateQuestion:active {
            transform: translateY(0);
        }

    /* ── Loading overlay — same as EvaluationIndex ── */
    #loadingOverlay {
        background: rgba(255,255,255,0.82) !important;
        backdrop-filter: blur(4px);
    }

        #loadingOverlay .mt-2 {
            font-weight: 600;
            color: var(--primary);
            letter-spacing: .5px;
        }

    /* ── Table wrapper — matches .filter-panel card style ── */
    #questionsTable_wrapper {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 16px 18px;
        box-shadow: var(--shadow);
    }

    /* ── Table — matches EvaluationIndex card headers ── */
    #questionsTable {
        border-radius: var(--radius);
        overflow: hidden;
        border: none !important;
    }

        #questionsTable thead tr {
            background: linear-gradient(135deg, var(--primary) 0%, #2c5282 100%);
        }

        #questionsTable thead th {
            color: #fff;
            font-weight: 600;
            letter-spacing: .5px;
            padding: 13px 16px;
            border: none !important;
            font-size: .78rem;
            text-transform: uppercase;
        }

        #questionsTable tbody tr {
            transition: background-color .15s ease;
        }

            #questionsTable tbody tr:hover {
                background-color: var(--accent-light) !important;
            }

        #questionsTable tbody td {
            padding: 12px 16px;
            vertical-align: middle;
            border-color: var(--border) !important;
            color: var(--text);
            font-size: .9rem;
        }

            /* Criteria cell — matches .t-name style */
            #questionsTable tbody td:first-child {
                font-weight: 700;
                color: var(--primary);
                font-size: .92rem;
            }

            /* Description divs — matches .subj-tag from EvaluationIndex */
            #questionsTable tbody td:nth-child(2) div {
                display: inline-block;
                font-size: .72rem;
                padding: 2px 8px;
                border-radius: 5px;
                background: var(--surface-2);
                border: 1px solid var(--border);
                color: var(--text-muted);
                font-weight: 600;
                margin: 2px 3px 2px 0;
                line-height: 1.5;
            }

    /* ── Edit button — matches .btn-details style ── */
    .btn-edit {
        padding: 5px 12px;
        border-radius: 7px;
        border: 1.5px solid var(--accent);
        background: #fff;
        color: var(--accent);
        font-size: .78rem;
        font-weight: 700;
        transition: all .15s;
    }

        .btn-edit:hover {
            background: var(--accent);
            color: #fff;
        }

    /* ── Delete button — consistent danger style ── */
    .btn-delete {
        padding: 5px 12px;
        border-radius: 7px;
        border: 1.5px solid var(--danger);
        background: #fff;
        color: var(--danger);
        font-size: .78rem;
        font-weight: 700;
        transition: all .15s;
    }

        .btn-delete:hover {
            background: var(--danger);
            color: #fff;
        }

    /* ── Modal — matches EvaluationIndex card aesthetic ── */
    .modal-content {
        border: none;
        border-radius: 14px;
        box-shadow: 0 20px 60px rgba(30,58,95,.18);
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, var(--primary) 0%, #2c5282 100%);
        color: #fff;
        padding: 18px 22px;
        border-bottom: none;
    }

        .modal-header .modal-title {
            font-weight: 700;
            font-size: 1rem;
            letter-spacing: .3px;
        }

        .modal-header .btn-close {
            filter: brightness(0) invert(1);
            opacity: .85;
        }

            .modal-header .btn-close:hover {
                opacity: 1;
            }

    .modal-body {
        padding: 24px 24px 12px;
        background: var(--surface);
    }

    .modal-footer {
        padding: 14px 22px;
        border-top: 1px solid var(--border);
        background: var(--surface-2);
    }

    /* ── Form labels — matches .fg-label from EvaluationIndex ── */
    .form-label {
        font-size: .75rem;
        font-weight: 700;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: .07em;
        margin-bottom: 6px;
    }

    /* ── Form inputs — matches .filter-search-wrap input ── */
    .form-control, .form-select {
        border-radius: 8px;
        border: 1.5px solid var(--border);
        padding: 10px 13px;
        font-size: .9rem;
        background: var(--surface-2);
        color: var(--text);
        transition: border-color .2s ease, box-shadow .2s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--accent);
            background: #fff;
            box-shadow: 0 0 0 3px rgba(46,134,222,.12);
        }

    /* ── Description row remove button ── */
    .description-item .form-control {
        border-right: none;
        border-radius: 8px 0 0 8px;
    }

    .description-item .remove-btn {
        border-radius: 0 8px 8px 0;
        font-size: .8rem;
        font-weight: 600;
        padding: 0 14px;
        border: 1.5px solid var(--danger);
        border-left: none;
        background: #fff;
        color: var(--danger);
        transition: all .15s;
    }

        .description-item .remove-btn:hover {
            background: var(--danger);
            color: #fff;
        }

    /* ── Add description button — matches .fb filter button style ── */
    #addDescription {
        padding: 5px 14px;
        font-size: .82rem;
        border-radius: 20px;
        border: 1.5px solid var(--success);
        background: #fff;
        color: var(--success);
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        transition: all .18s;
    }

        #addDescription:hover {
            background: var(--success);
            color: #fff;
        }

    /* ── Modal footer buttons ── */
    .modal-footer .btn-secondary {
        border-radius: 8px;
        font-weight: 500;
        padding: 8px 18px;
    }

    #saveQuestionBtn {
        background: linear-gradient(135deg, var(--primary) 0%, #2c5282 100%);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        padding: 8px 22px;
        box-shadow: 0 4px 12px rgba(30,58,95,.25);
        transition: transform .15s ease, box-shadow .15s ease;
        color: #fff;
    }

        #saveQuestionBtn:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 18px rgba(30,58,95,.35);
            color: #fff;
        }

    /* ── Toast — same as EvaluationIndex ── */
    #toast {
        min-width: 280px;
        border-radius: 10px !important;
        box-shadow: 0 6px 24px rgba(0,0,0,.15) !important;
        font-weight: 500;
    }

    /* ── DataTable controls — consistent with design system ── */
    .dataTables_wrapper .dataTables_filter input {
        border-radius: 8px;
        border: 1.5px solid var(--border);
        padding: 8px 40px 8px 14px;
        font-size: .9rem;
        background: var(--surface-2);
        color: var(--text);
        margin-left: 6px;
        transition: border-color .2s;
        outline: none;
    }

        .dataTables_wrapper .dataTables_filter input:focus {
            border-color: var(--accent);
            background: #fff;
            box-shadow: 0 0 0 3px rgba(46,134,222,.1);
        }

    .dataTables_wrapper .dataTables_length select {
        border-radius: 8px;
        border: 1.5px solid var(--border);
        padding: 6px 10px;
        margin: 0 6px;
        background: var(--surface-2);
        color: var(--text);
    }

    .dataTables_wrapper .dataTables_info {
        font-size: .82rem;
        color: var(--text-muted);
        font-weight: 600;
        padding-top: 10px;
    }

    .dataTables_paginate .paginate_button.current,
    .dataTables_paginate .paginate_button.current:hover {
        background: linear-gradient(135deg, var(--primary), #2c5282) !important;
        border-color: transparent !important;
        color: #fff !important;
        border-radius: 6px;
    }

    .dataTables_paginate .paginate_button:hover {
        background: var(--accent-light) !important;
        border-color: transparent !important;
        color: var(--accent) !important;
        border-radius: 6px;
    }

    .dataTables_paginate .paginate_button {
        border-radius: 6px;
        font-weight: 600;
        color: var(--text-muted) !important;
    }
</style>

@* ═══════════════════════════════════════════
   ORIGINAL CODE — NOT MODIFIED
   ═══════════════════════════════════════════ *@

<h1>Questions</h1>

<div class="mb-3">
    <button class="btn btn-primary" id="btnCreateQuestion">
        <i class="bi bi-plus-circle"></i> Create New
    </button>
</div>

<!-- Loading overlay -->
<div id="loadingOverlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(255,255,255,0.7); z-index:1050; text-align:center;">
    <div style="position:absolute; top:50%; left:50%; transform:translate(-50%, -50%);">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="mt-2">Loading...</div>
    </div>
</div>

<table class="table table-bordered table-striped table-sm align-middle w-100" id="questionsTable">
    <thead>
        <tr>
            <th>Criteria</th>
            <th>Descriptions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.QuestionIds.First()">
                <td>@item.CriteriaName</td>
                <td>
                    @foreach (var desc in item.Descriptions)
                    {
                        <div>@desc</div>
                    }
                </td>
                <td>
                    <button class="btn btn-sm btn-warning btn-edit" data-id="@item.QuestionIds.First()">
                        <i class="bi bi-pencil-square"></i>
                    </button>

                    @*<button class="btn btn-sm btn-danger btn-delete" data-id="@item.QuestionIds.First()">
                        <i class="bi bi-trash"></i>
                    </button>
                    *@
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for Create/Edit -->
<div class="modal fade" id="questionModal" tabindex="-1" aria-labelledby="questionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="questionModalLabel">Create/Edit Questions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="questionForm">
                    <input type="hidden" id="QuestionId" name="QuestionId" />

                    <div class="mb-3">
                        <label for="CriteriaId" class="form-label">Criteria</label>
                        <select class="form-select" id="CriteriaId" name="CriteriaId" required>
                            <option value="">-- Select Criteria --</option>
                            @foreach (var criteria in ViewBag.CriteriaId as SelectList)
                            {
                                <option value="@criteria.Value">@criteria.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descriptions</label>
                        <div id="descriptionContainer">
                            <div class="input-group mb-2 description-item">
                                <input type="text" class="form-control description-input" placeholder="Enter description" />
                                <button type="button" class="btn btn-danger btn-sm remove-btn">Remove</button>
                            </div>
                        </div>
                        <button type="button" id="addDescription" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle"></i> Add Description
                        </button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveQuestionBtn">
                    <i class="bi bi-check-circle"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
    <div id="toast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />

    <script>
        $(document).ready(function () {
            var toastEl = $('#toast');
            var toastMessage = $('#toastMessage');
            var loadingOverlay = $('#loadingOverlay');

            function showToast(message, bgClass = 'bg-success') {
                toastEl.removeClass('bg-success bg-danger bg-warning').addClass(bgClass);
                toastMessage.text(message);
                var toast = new bootstrap.Toast(toastEl[0]);
                toast.show();
            }

            function showLoading(show = true) {
                show ? loadingOverlay.show() : loadingOverlay.hide();
            }

            var questionModalEl = document.getElementById('questionModal');
            var questionModal = new bootstrap.Modal(questionModalEl);

            var table = $('#questionsTable').DataTable({
                "columnDefs": [{ "orderable": false, "targets": 2 }]
            });

            // Add new description field
            $("#addDescription").click(function () {
                var newInput = `<div class="input-group mb-2 description-item">
                                    <input type="text" class="form-control description-input" placeholder="Enter description" />
                                    <button type="button" class="btn btn-danger btn-sm remove-btn">Remove</button>
                                </div>`;
                $("#descriptionContainer").append(newInput);
            });

            // Remove description field
            $(document).on("click", ".remove-btn", function () {
                if ($('.description-item').length > 1) {
                    $(this).closest(".description-item").remove();
                } else {
                    showToast('At least one description is required', 'bg-warning');
                }
            });

            // Open modal for create
            $('#btnCreateQuestion').click(function () {
                $('#questionModalLabel').text('Create Questions');
                $('#QuestionId').val('');
                $('#CriteriaId').val('');
                $('#descriptionContainer').html(`
                    <div class="input-group mb-2 description-item">
                        <input type="text" class="form-control description-input" placeholder="Enter description" />
                        <button type="button" class="btn btn-danger btn-sm remove-btn">Remove</button>
                    </div>
                `);
                questionModal.show();
            });

            // Open modal for edit
            $(document).on('click', '.btn-edit', function () {
                var questionId = $(this).data('id');
                showLoading(true);

                $.get(`/api/QuestionsApi/ByQuestion/${questionId}`, function (res) {
                    showLoading(false);
                    if (res.success) {
                        $('#questionModalLabel').text('Edit Questions');
                        $('#QuestionId').val(questionId);
                        $('#CriteriaId').val(res.data.criteriaId);

                        $('#descriptionContainer').empty();
                        res.data.descriptions.forEach(function(desc) {
                            var input = `<div class="input-group mb-2 description-item">
                                            <input type="text" class="form-control description-input" value="${desc}" placeholder="Enter description" />
                                            <button type="button" class="btn btn-danger btn-sm remove-btn">Remove</button>
                                         </div>`;
                            $('#descriptionContainer').append(input);
                        });

                        questionModal.show();
                    } else {
                        showToast(res.message, 'bg-danger');
                    }
                }).fail(function () {
                    showLoading(false);
                    showToast('Failed to load questions', 'bg-danger');
                });
            });

            // Save questions - FIXED VERSION
            $('#saveQuestionBtn').click(function () {
                var questionId = $('#QuestionId').val();
                var isEdit = questionId && questionId != '';
                var criteriaId = parseInt($('#CriteriaId').val());

                if (!criteriaId || criteriaId === 0) {
                    showToast('Please select a criteria', 'bg-danger');
                    return;
                }

                // FIXED: Only collect NON-EMPTY descriptions
                var descriptions = [];
                $('.description-input').each(function() {
                    var val = $(this).val().trim();
                    if (val !== '') {  // Only add non-empty values
                        descriptions.push(val);
                    }
                });

                if (descriptions.length === 0) {
                    showToast('Please enter at least one description', 'bg-danger');
                    return;
                }

                var requestData = {
                    criteriaId: criteriaId,
                    descriptions: descriptions
                };

                var url = isEdit ? `/api/QuestionsApi/${questionId}` : '/api/QuestionsApi';
                var type = isEdit ? 'PUT' : 'POST';

                showLoading(true);
                $.ajax({
                    url: url,
                    type: type,
                    contentType: 'application/json',
                    data: JSON.stringify(requestData),
                    success: function(res) {
                        showLoading(false);
                        if (res.success) {
                            var descriptionsHtml = res.data.descriptions.map(d => `<div>${d}</div>`).join('');
                            var firstQuestionId = res.data.questionIds[0];

                            if (isEdit) {
                                var row = table.row($(`tr[data-id="${questionId}"]`));
                                row.data([
                                    res.data.criteriaName,
                                    descriptionsHtml,
                                    `<button class="btn btn-sm btn-warning btn-edit" data-id="${firstQuestionId}"><i class="bi bi-pencil-square"></i></button>
                                     <button class="btn btn-sm btn-danger btn-delete" data-id="${firstQuestionId}"><i class="bi bi-trash"></i></button>`
                                ]).draw(false);

                                // Update the data-id attribute with new ID
                                $(`tr[data-id="${questionId}"]`).attr('data-id', firstQuestionId);
                            } else {
                                var newRow = table.row.add([
                                    res.data.criteriaName,
                                    descriptionsHtml,
                                    `<button class="btn btn-sm btn-warning btn-edit" data-id="${firstQuestionId}"><i class="bi bi-pencil-square"></i></button>
                                     <button class="btn btn-sm btn-danger btn-delete" data-id="${firstQuestionId}"><i class="bi bi-trash"></i></button>`
                                ]).draw(false).node();
                                $(newRow).attr('data-id', firstQuestionId);
                            }
                            showToast(res.message);
                            questionModal.hide();
                        } else {
                            showToast(res.message, 'bg-danger');
                        }
                    },
                    error: function(xhr) {
                        showLoading(false);
                        var errorMsg = 'Failed to save questions!';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }
                        showToast(errorMsg, 'bg-danger');
                    }
                });
            });

            // Delete questions
            $(document).on('click', '.btn-delete', function () {
                if (!confirm('Are you sure you want to delete all questions for this criteria?')) return;
                var id = $(this).data('id');

                showLoading(true);
                $.ajax({
                    url: `/api/QuestionsApi/${id}`,
                    type: 'DELETE',
                    success: function(res) {
                        showLoading(false);
                        if (res.success) {
                            table.row($(`tr[data-id="${id}"]`)).remove().draw();
                            showToast(res.message);
                        } else {
                            showToast(res.message, 'bg-danger');
                        }
                    },
                    error: function(xhr) {
                        showLoading(false);
                        var errorMsg = 'Failed to delete questions!';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }
                        showToast(errorMsg, 'bg-danger');
                    }
                });
            });
        });
    </script>
}
