@model Teacher_Evaluation_System__Golden_Success_College_.Models.Student

@{
    ViewData["Title"] = "Student Details";
    Layout = "_Layoutadmin";
}

<div class="container mt-4">

    <h2 class="mb-3">Student Details</h2>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs" id="studentTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active"
                    data-bs-toggle="tab"
                    data-bs-target="#personal">
                Personal Info
            </button>
        </li>

        <li class="nav-item">
            <button class="nav-link"
                    data-bs-toggle="tab"
                    data-bs-target="#academic">
                Academic Info
            </button>
        </li>

        <li class="nav-item">
            <button class="nav-link"
                    data-bs-toggle="tab"
                    data-bs-target="#account">
                Account Info
            </button>
        </li>
    </ul>

    <!-- Tabs Content -->
    <div class="tab-content border border-top-0 p-4">

        <!-- PERSONAL -->
        <div class="tab-pane fade show active" id="personal">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
        </div>

        <!-- ACADEMIC -->
        <div class="tab-pane fade" id="academic">
            <p><strong>Level:</strong> @Model.Level?.Description</p>
            <p><strong>Section:</strong> @Model.Section?.SectionName</p>
            <p><strong>College Year:</strong> @Model.CollegeYearLevel</p>
        </div>

        <!-- ACCOUNT -->
        <div class="tab-pane fade" id="account">
            <p><strong>Role:</strong> @Model.Role?.Name</p>

            <p>
                <strong>Status:</strong>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Deactivated</span>
                }
            </p>
        </div>

    </div>

    <div class="mt-3 text-end">
        <a asp-action="Edit"
           asp-route-id="@Model.StudentId"
           class="btn btn-warning">
            Edit
        </a>

        <a asp-action="Index"
           class="btn btn-secondary">
            Back
        </a>
    </div>

</div>


<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
