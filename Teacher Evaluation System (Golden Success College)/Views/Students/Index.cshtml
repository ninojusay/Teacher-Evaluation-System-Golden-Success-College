@model IEnumerable<Teacher_Evaluation_System__Golden_Success_College_.Models.Student>

@{
    ViewData["Title"] = "Students";
    Layout = "_Layoutadmin";
}

<h1>Students</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle-fill"></i> @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-3">
    <button class="btn btn-primary" id="btnCreateStudent">
        <i class="bi bi-plus-circle"></i> Create Student
    </button>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(255,255,255,0.8); z-index:9999; text-align:center;">
    <div style="position:absolute; top:50%; left:50%; transform:translate(-50%, -50%);">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="mt-3 fw-bold text-primary">Loading...</div>
    </div>
</div>

<!-- Toast Notification -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 11000">
    <div id="toast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<!-- Students Table -->
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-sm align-middle w-100" id="studentsTable">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Level</th>
                <th>Section</th>
                <th>College Year</th>
                <th>Status</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <!-- FIX 1: Added row shading for inactive students -->
                <tr data-id="@item.StudentId" class="@(item.IsActive ? "" : "table-secondary")">
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Level?.LevelName</td>
                    <td>@(item.Section?.SectionName ?? "N/A")</td>
                    <td>@(item.CollegeYearLevel > 0 ? item.CollegeYearLevel.ToString() : "N/A")</td>
                    <td>
                        @if (item.EmailConfirmed)
                        {
                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Confirmed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pending</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning btn-edit" data-id="@item.StudentId" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </button>

                        <!-- FIX 2: Check IsActive to render the correct Deactivate/Reactivate button -->
                        @if (item.IsActive)
                        {
                            <button class="btn btn-sm btn-info btn-deactivate" data-id="@item.StudentId" title="Deactivate">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-success btn-deactivate" data-id="@item.StudentId" title="Reactivate">
                                <i class="bi bi-arrow-repeat"></i>
                            </button>
                        }

                        @* <button class="btn btn-sm btn-danger btn-delete" data-id="@item.StudentId" title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Student Modal -->
<div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="studentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="studentModalLabel">Create/Edit Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="studentForm">
                    <input type="hidden" id="StudentId" name="StudentId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="FullName" name="FullName" required />
                            <div class="invalid-feedback">Full Name is required</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="Email" name="Email" required />
                            <div class="invalid-feedback">Valid email is required</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="Password" name="Password" autocomplete="new-password" />
                                <button type="button" class="btn btn-outline-secondary" id="togglePasswordBtn" title="Show password" aria-label="Show password" tabindex="-1">
                                    <i class="bi bi-eye" id="togglePasswordIcon" aria-hidden="true"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">Leave empty when creating (auto-generated). When editing, leave empty to keep existing password. Passwords are hashed securely on the server.</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="LevelId" class="form-label">Level <span class="text-danger">*</span></label>
                            <select class="form-select" id="LevelId" name="LevelId" required>
                                <option value="">-- Select Level --</option>
                                @if (ViewData["LevelId"] != null)
                                {
                                    @foreach (var level in ViewData["LevelId"] as SelectList)
                                    {
                                        <option value="@level.Value">@level.Text</option>
                                    }
                                }
                            </select>
                            <div class="invalid-feedback">Level is required</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="SectionId" class="form-label">Section/Program <span class="text-danger">*</span></label>
                            <select class="form-select" id="SectionId" name="SectionId" required>
                                <option value="">-- Select Section --</option>
                                @if (ViewData["SectionId"] != null)
                                {
                                    var sections = ViewData["SectionId"] as IEnumerable<SelectListItem>;
                                    var groupedSections = sections.GroupBy(s => s.Group.Name);

                                    foreach (var group in groupedSections)
                                    {
                                        <optgroup label="@group.Key">
                                            @foreach (var sec in group)
                                            {
                                                <option value="@sec.Value" data-level="@group.Key">@sec.Text</option>
                                            }
                                        </optgroup>
                                    }
                                }
                            </select>
                            <small class="form-text text-muted" id="sectionHelpText">Select the appropriate section/program for the student.</small>
                            <div class="invalid-feedback">Section is required</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3" id="collegeYearContainer" style="display:none;">
                            <label for="CollegeYearLevel" class="form-label">College Year Level <span class="text-danger">*</span></label>
                            <select class="form-select" id="CollegeYearLevel" name="CollegeYearLevel">
                                <option value="0">N/A</option>
                                <option value="1">1st Year</option>
                                <option value="2">2nd Year</option>
                                <option value="3">3rd Year</option>
                                <option value="4">4th Year</option>
                            </select>
                            <small class="form-text text-muted">Required for College level students.</small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Close
                </button>
                <button type="button" class="btn btn-primary" id="saveStudentBtn">
                    <i class="bi bi-check-circle"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            var toastEl = $('#toast');
            var toastMessage = $('#toastMessage');
            var loadingOverlay = $('#loadingOverlay');
            var studentModal = new bootstrap.Modal(document.getElementById('studentModal'));

            // Store all sections with their level information
            var allSections = [];
            $('#SectionId optgroup').each(function() {
                var levelName = $(this).attr('label');
                $(this).find('option').each(function() {
                    if ($(this).val()) {
                        allSections.push({
                            value: $(this).val(),
                            text: $(this).text(),
                            level: levelName
                        });
                    }
                });
            });

            // Toast notification function
            function showToast(message, type = 'success') {
                var bgClass = 'bg-success text-white';
                var btnClass = 'btn-close-white';

                if (type === 'danger' || type === 'error') {
                    bgClass = 'bg-danger text-white';
                    btnClass = 'btn-close-white';
                } else if (type === 'warning') {
                    bgClass = 'bg-warning text-dark';
                    btnClass = '';
                } else if (type === 'info') {
                    bgClass = 'bg-info text-white';
                    btnClass = 'btn-close-white';
                }

                toastEl.removeClass('bg-success bg-danger bg-warning bg-info text-white text-dark')
                       .addClass(bgClass);

                $('.btn-close', toastEl).removeClass('btn-close-white').addClass(btnClass);

                toastMessage.text(message);
                var toast = new bootstrap.Toast(toastEl[0], {
                    autohide: true,
                    delay: 5000
                });
                toast.show();
            }

            function showLoading(show = true) {
                show ? loadingOverlay.show() : loadingOverlay.hide();
            }

            // FIX 3: Helper function to generate action buttons (used after create/edit)
            function actionButtons(student) {
                var deactivateBtn = student.isActive
                    ? `<button class="btn btn-sm btn-info btn-deactivate" data-id="${student.studentId}" title="Deactivate"><i class="bi bi-x-circle"></i></button>`
                    : `<button class="btn btn-sm btn-success btn-deactivate" data-id="${student.studentId}" title="Reactivate"><i class="bi bi-arrow-repeat"></i></button>`;

                return `<button class="btn btn-sm btn-warning btn-edit" data-id="${student.studentId}" title="Edit"><i class="bi bi-pencil-square"></i></button> ` +
                       deactivateBtn + ` ` +
                       `<button class="btn btn-sm btn-danger btn-delete" data-id="${student.studentId}" title="Delete"><i class="bi bi-trash"></i></button>`;
            }

            function filterSections(levelName) {
                var $sectionSelect = $('#SectionId');
                var currentValue = $sectionSelect.val();

                $sectionSelect.empty();
                $sectionSelect.append('<option value="">-- Select Section --</option>');

                if (!levelName) {
                    rebuildAllSections();
                    return;
                }

                var levelLower = levelName.toLowerCase();
                var filteredSections = [];

                if (levelLower.includes('college')) {
                    filteredSections = allSections.filter(s => s.level.toLowerCase().includes('college'));
                } else if (levelLower.includes('junior')) {
                    filteredSections = allSections.filter(s => s.level.toLowerCase().includes('junior'));
                } else if (levelLower.includes('senior')) {
                    filteredSections = allSections.filter(s => s.level.toLowerCase().includes('senior'));
                } else {
                    filteredSections = allSections;
                }

                var grouped = {};
                filteredSections.forEach(function(sec) {
                    if (!grouped[sec.level]) {
                        grouped[sec.level] = [];
                    }
                    grouped[sec.level].push(sec);
                });

                Object.keys(grouped).forEach(function(levelName) {
                    var $optgroup = $('<optgroup>').attr('label', levelName);
                    grouped[levelName].forEach(function(sec) {
                        $optgroup.append(
                            $('<option>')
                                .attr('value', sec.value)
                                .attr('data-level', sec.level)
                                .text(sec.text)
                        );
                    });
                    $sectionSelect.append($optgroup);
                });

                if (currentValue && $sectionSelect.find(`option[value="${currentValue}"]`).length > 0) {
                    $sectionSelect.val(currentValue);
                } else {
                    $sectionSelect.val('');
                }
            }

            function rebuildAllSections() {
                var $sectionSelect = $('#SectionId');
                var grouped = {};

                allSections.forEach(function(sec) {
                    if (!grouped[sec.level]) {
                        grouped[sec.level] = [];
                    }
                    grouped[sec.level].push(sec);
                });

                Object.keys(grouped).forEach(function(levelName) {
                    var $optgroup = $('<optgroup>').attr('label', levelName);
                    grouped[levelName].forEach(function(sec) {
                        $optgroup.append(
                            $('<option>')
                                .attr('value', sec.value)
                                .attr('data-level', sec.level)
                                .text(sec.text)
                        );
                    });
                    $sectionSelect.append($optgroup);
                });
            }

            // Initialize DataTable
            var table = $('#studentsTable').DataTable({
                "columnDefs": [{ "orderable": false, "targets": 6 }],
                "order": [[0, 'asc']],
                "pageLength": 25,
                "language": {
                    "search": "Search students:",
                    "lengthMenu": "Show _MENU_ students per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ students",
                    "infoEmpty": "No students found",
                    "infoFiltered": "(filtered from _MAX_ total students)"
                }
            });

            // Password show/hide toggle
            $('#togglePasswordBtn').on('click', function () {
                var $input = $('#Password');
                var $icon = $('#togglePasswordIcon');
                if ($input.attr('type') === 'password') {
                    $input.attr('type', 'text');
                    $icon.removeClass('bi-eye').addClass('bi-eye-slash');
                    $('#togglePasswordBtn').attr('title', 'Hide password').attr('aria-label', 'Hide password');
                } else {
                    $input.attr('type', 'password');
                    $icon.removeClass('bi-eye-slash').addClass('bi-eye');
                    $('#togglePasswordBtn').attr('title', 'Show password').attr('aria-label', 'Show password');
                }
            });

            // Level Change Handler
            $('#LevelId').change(function () {
                var selectedText = $(this).find('option:selected').text();
                filterSections(selectedText);

                var isCollege = selectedText.toLowerCase().includes('college');
                $('#collegeYearContainer').toggle(isCollege);
                $('#CollegeYearLevel').prop('required', isCollege);

                if (isCollege && ($('#CollegeYearLevel').val() == '0' || !$('#CollegeYearLevel').val())) {
                    $('#CollegeYearLevel').val('1');
                } else if (!isCollege) {
                    $('#CollegeYearLevel').val('0');
                }

                $('#sectionHelpText').text(isCollege ? 'Select the program (e.g., BSHM, BSIT).' : 'Select the section for the student.');
            });

            // Reset password visibility when modal opens
            function resetPasswordToggle() {
                $('#Password').attr('type', 'password');
                $('#togglePasswordIcon').removeClass('bi-eye-slash').addClass('bi-eye');
                $('#togglePasswordBtn').attr('title', 'Show password').attr('aria-label', 'Show password');
            }

            // Open modal for create
            $('#btnCreateStudent').click(function () {
                $('#studentModalLabel').text('Create Student');
                $('#studentForm')[0].reset();
                $('#studentForm').removeClass('was-validated');
                $('#StudentId').val('');
                $('#Password').prop('required', false);
                resetPasswordToggle();
                $('#collegeYearContainer').hide();
                filterSections('');
                studentModal.show();
            });

            // Open modal for edit
            $(document).on('click', '.btn-edit', function () {
                var id = $(this).data('id');
                showLoading(true);

                $.get(`/api/StudentsApi/${id}`, function (res) {
                    showLoading(false);
                    if (res.success) {
                        $('#studentModalLabel').text('Edit Student');
                        $('#studentForm')[0].reset();
                        $('#studentForm').removeClass('was-validated');
                        $('#StudentId').val(res.data.studentId);
                        $('#FullName').val(res.data.fullName);
                        $('#Email').val(res.data.email);
                        $('#Password').val('');
                        $('#Password').prop('required', false);
                        resetPasswordToggle();
                        $('#LevelId').val(res.data.levelId || '');

                        var levelText = $('#LevelId option:selected').text();
                        filterSections(levelText);
                        $('#SectionId').val(res.data.sectionId || '');
                        $('#CollegeYearLevel').val(res.data.collegeYearLevel || '0');
                        $('#LevelId').trigger('change');

                        studentModal.show();
                    } else {
                        showToast(res.message, 'danger');
                    }
                }).fail(function (xhr) {
                    showLoading(false);
                    showToast('Failed to load student.', 'danger');
                });
            });

            // Save student (create or edit)
            $('#saveStudentBtn').click(function () {
                var form = $('#studentForm')[0];

                var studentId = $('#StudentId').val();
                var isEdit = studentId && studentId != '';
                var levelText = $('#LevelId option:selected').text().toLowerCase();
                var sectionId = $('#SectionId').val();
                var collegeYearLevel = $('#CollegeYearLevel').val();
                var password = $('#Password').val();

                if (!sectionId) {
                    showToast('Section/Program is required', 'danger');
                    return;
                }

                if (levelText.includes('college') && (!collegeYearLevel || collegeYearLevel == '0')) {
                    showToast('College Year Level is required for College students', 'danger');
                    return;
                }

                var studentData = {
                    studentId: isEdit ? parseInt(studentId) : 0,
                    fullName: $('#FullName').val(),
                    email: $('#Email').val(),
                    password: password || null,
                    levelId: parseInt($('#LevelId').val()),
                    sectionId: sectionId ? parseInt(sectionId) : null,
                    collegeYearLevel: collegeYearLevel ? parseInt(collegeYearLevel) : 0
                };

                showLoading(true);

                var api_url = isEdit ? `/api/StudentsApi/${studentId}` : '/api/StudentsApi';
                var api_type = isEdit ? 'PUT' : 'POST';

                $.ajax({
                    url: api_url,
                    type: api_type,
                    contentType: 'application/json',
                    data: JSON.stringify(studentData),
                    success: function (res) {
                        showLoading(false);
                        if (res.success) {
                            var sectionDisplay = res.data.sectionName || 'N/A';
                            var collegeYear = res.data.collegeYearLevel > 0 ? res.data.collegeYearLevel : 'N/A';

                            var confirmedBadge = res.data.emailConfirmed
                                ? '<span class="badge bg-success"><i class="bi bi-check-circle"></i> Confirmed</span>'
                                : '<span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pending</span>';

                            // FIX 4: Use actionButtons helper so new/edited rows include the deactivate button
                            var newRowData = [
                                res.data.fullName,
                                res.data.email,
                                res.data.levelName || '',
                                sectionDisplay,
                                collegeYear,
                                confirmedBadge,
                                actionButtons(res.data)
                            ];

                            if (isEdit) {
                                var $row = $(`tr[data-id="${studentId}"]`);
                                table.row($row).data(newRowData).draw(false);
                                $row.attr('data-id', res.data.studentId);
                            } else {
                                var newRow = table.row.add(newRowData).draw(false).node();
                                $(newRow).attr('data-id', res.data.studentId);
                            }

                            showToast(res.message, 'success');
                            studentModal.hide();
                        } else {
                            showToast(res.message, 'danger');
                        }
                    },
                    error: function (xhr) {
                        showLoading(false);
                        var errorMessage = xhr.responseJSON && xhr.responseJSON.message ? xhr.responseJSON.message : 'Failed to save student!';
                        showToast(errorMessage, 'danger');
                    }
                });
            });

            // FIX 5: Deactivate/Reactivate student handler
            $(document).on('click', '.btn-deactivate', function () {
                var button = $(this);
                var id = button.data('id');
                var row = button.closest('tr');
                var studentName = row.find('td:first').text();

                var action = button.hasClass('btn-info') ? 'deactivate' : 'reactivate';
                if (!confirm(`Are you sure you want to ${action} ${studentName}?`)) return;

                showLoading(true);
                $.post(`/api/StudentsApi/ToggleActive/${id}`, function (res) {
                    showLoading(false);
                    if (res.success) {
                        if (res.isActive) {
                            row.removeClass('table-secondary');
                            button.removeClass('btn-success').addClass('btn-info');
                            button.attr('title', 'Deactivate');
                            button.html('<i class="bi bi-x-circle"></i>');
                        } else {
                            row.addClass('table-secondary');
                            button.removeClass('btn-info').addClass('btn-success');
                            button.attr('title', 'Reactivate');
                            button.html('<i class="bi bi-arrow-repeat"></i>');
                        }
                        showToast(res.message, 'success');
                    } else {
                        showToast(res.message, 'danger');
                    }
                }).fail(function () {
                    showLoading(false);
                    showToast('Failed to update student status!', 'danger');
                });
            });

            // Delete student
            $(document).on('click', '.btn-delete', function () {
                var id = $(this).data('id');
                var $row = $(this).closest('tr');
                var studentName = $row.find('td:first').text();

                if (!confirm(`Are you sure you want to delete ${studentName}? This action cannot be undone.`)) {
                    return;
                }

                showLoading(true);

                $.ajax({
                    url: `/api/StudentsApi/${id}`,
                    type: 'DELETE',
                    success: function (res) {
                        showLoading(false);
                        if (res.success) {
                            table.row($row).remove().draw();
                            showToast(res.message, 'success');
                        } else {
                            showToast(res.message, 'danger');
                        }
                    },
                    error: function (xhr) {
                        showLoading(false);
                        var errorMessage = 'Failed to delete student!';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        } else if (xhr.status === 400) {
                            errorMessage = 'Cannot delete student. This student may have related records (enrollments, evaluations). Please remove related records first.';
                        }
                        showToast(errorMessage, 'danger');
                    }
                });
            });

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}
