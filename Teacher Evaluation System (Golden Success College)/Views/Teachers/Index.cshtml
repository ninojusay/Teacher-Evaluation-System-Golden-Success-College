@model IEnumerable<Teacher_Evaluation_System__Golden_Success_College_.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
    Layout = "_Layoutadmin";
}

<style>
    :root {
        --primary: #1e3a5f;
        --accent: #2e86de;
        --accent-light: #e8f1fb;
        --success: #27ae60;
        --warning: #f39c12;
        --danger: #e74c3c;
        --surface: #ffffff;
        --surface-2: #f4f7fb;
        --border: #dce3ee;
        --text: #1a2535;
        --text-muted: #6b7c99;
        --shadow: 0 2px 12px rgba(30,58,95,0.08);
        --radius: 10px;
    }

    body { background: var(--surface-2); }

    .page-header {
        background: linear-gradient(135deg, var(--primary) 0%, #2c5282 100%);
        color: #fff; border-radius: var(--radius); padding: 24px 28px;
        margin-bottom: 24px; display: flex; align-items: center;
        justify-content: space-between; flex-wrap: wrap; gap: 16px;
        box-shadow: 0 4px 20px rgba(30,58,95,0.2);
    }
    .page-header h1 { font-size: 1.7rem; font-weight: 700; margin: 0; letter-spacing: -.3px; }
    .page-header .subtitle { font-size: .88rem; opacity: .75; margin-top: 3px; }

    .filter-panel {
        background: var(--surface); border: 1px solid var(--border);
        border-radius: var(--radius); padding: 18px 22px;
        margin-bottom: 20px; box-shadow: var(--shadow);
    }
    .filter-title {
        font-size: .78rem; font-weight: 700; text-transform: uppercase;
        letter-spacing: .08em; color: var(--text-muted); margin-bottom: 14px;
        display: flex; align-items: center; gap: 6px;
    }
    .filter-row { display: flex; flex-wrap: wrap; gap: 12px; align-items: flex-end; }
    .filter-group { display: flex; flex-direction: column; gap: 5px; flex: 1 1 180px; }
    .filter-group label { font-size: .8rem; font-weight: 600; color: var(--text); }
    .filter-group select, .filter-group input {
        border: 1px solid var(--border); border-radius: 7px; padding: 8px 12px;
        font-size: .88rem; color: var(--text); background: var(--surface-2);
        transition: border-color .2s; outline: none;
    }
    .filter-group select:focus, .filter-group input:focus { border-color: var(--accent); background: #fff; }
    .btn-filter-reset {
        padding: 8px 16px; border-radius: 7px; border: 1px solid var(--border);
        background: #fff; color: var(--text-muted); font-size: .85rem;
        cursor: pointer; transition: all .2s; white-space: nowrap;
    }
    .btn-filter-reset:hover { border-color: var(--danger); color: var(--danger); }

    .stats-bar { display: flex; gap: 12px; flex-wrap: wrap; margin-bottom: 20px; }
    .stat-card {
        background: var(--surface); border: 1px solid var(--border);
        border-radius: var(--radius); padding: 14px 20px;
        flex: 1 1 130px; box-shadow: var(--shadow);
        display: flex; flex-direction: column; gap: 4px;
    }
    .stat-card .stat-value { font-size: 1.6rem; font-weight: 800; color: var(--primary); line-height: 1; }
    .stat-card .stat-label { font-size: .75rem; color: var(--text-muted); font-weight: 600; text-transform: uppercase; letter-spacing: .06em; }
    .stat-card.active .stat-value   { color: var(--success); }
    .stat-card.inactive .stat-value { color: var(--danger); }
    .stat-card.depts .stat-value    { color: #8e44ad; }

    .view-switcher {
        display: flex; gap: 4px; background: var(--surface-2);
        border: 1px solid var(--border); border-radius: 8px; padding: 3px;
    }
    .view-btn {
        padding: 6px 14px; border-radius: 6px; border: none;
        background: transparent; color: var(--text-muted); font-size: .82rem;
        font-weight: 600; cursor: pointer; transition: all .2s;
        display: flex; align-items: center; gap: 5px;
    }
    .view-btn.active { background: var(--surface); color: var(--primary); box-shadow: 0 1px 4px rgba(0,0,0,.1); }

    .results-bar {
        display: flex; align-items: center; justify-content: space-between;
        margin-bottom: 14px; flex-wrap: wrap; gap: 10px;
    }
    .results-count { font-size: .88rem; color: var(--text-muted); }
    .results-count strong { color: var(--primary); }

    .group-header {
        background: linear-gradient(90deg, var(--primary) 0%, #2c5282 100%);
        color: #fff; padding: 10px 18px; border-radius: 8px 8px 0 0;
        display: flex; align-items: center; justify-content: space-between;
        margin-top: 22px; cursor: pointer; user-select: none; transition: opacity .15s;
    }
    .group-header:hover { opacity: .92; }
    .group-header .group-name { font-weight: 700; font-size: .95rem; display: flex; align-items: center; gap: 8px; }
    .group-header .group-meta { display: flex; align-items: center; gap: 10px; font-size: .8rem; opacity: .85; }
    .group-chevron { transition: transform .25s; font-size: .9rem; }
    .group-chevron.collapsed { transform: rotate(-90deg); }

    .group-table-wrapper {
        border: 1px solid var(--border); border-top: none;
        border-radius: 0 0 8px 8px; overflow: hidden;
    }
    .teacher-table { width: 100%; border-collapse: collapse; background: var(--surface); }
    .teacher-table thead tr { background: var(--surface-2); }
    .teacher-table th {
        padding: 9px 14px; font-size: .75rem; font-weight: 700;
        text-transform: uppercase; letter-spacing: .07em;
        color: var(--text-muted); border-bottom: 1px solid var(--border); white-space: nowrap;
    }
    .teacher-table td { padding: 10px 14px; font-size: .87rem; border-bottom: 1px solid #f0f3f8; color: var(--text); vertical-align: middle; }
    .teacher-table tbody tr:last-child td { border-bottom: none; }
    .teacher-table tbody tr:hover { background: #f7faff; }
    .teacher-table tbody tr.inactive-row { background: #fafafa; opacity: .72; }

    /* Card grid */
    .card-grid {
        display: grid; grid-template-columns: repeat(auto-fill, minmax(230px,1fr));
        gap: 14px; padding: 16px; background: var(--surface);
        border: 1px solid var(--border); border-top: none; border-radius: 0 0 8px 8px;
    }
    .teacher-card {
        background: var(--surface-2); border: 1px solid var(--border);
        border-radius: 9px; padding: 16px; text-align: center;
        transition: box-shadow .2s, transform .2s;
    }
    .teacher-card:hover { box-shadow: 0 6px 20px rgba(30,58,95,.12); transform: translateY(-2px); }
    .teacher-card.inactive { opacity: .65; }
    .tc-avatar {
        width: 64px; height: 64px; border-radius: 50%; object-fit: cover;
        margin: 0 auto 10px; display: block;
        border: 3px solid var(--border);
    }
    .tc-avatar-placeholder {
        width: 64px; height: 64px; border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        color: #fff; display: flex; align-items: center; justify-content: center;
        font-weight: 800; font-size: 1.1rem; margin: 0 auto 10px;
    }
    .tc-name { font-weight: 700; font-size: .95rem; color: var(--primary); margin-bottom: 3px; }
    .tc-dept { font-size: .8rem; color: var(--text-muted); margin-bottom: 8px; }
    .tc-meta { display: flex; justify-content: center; flex-wrap: wrap; gap: 5px; margin-bottom: 10px; }
    .tc-tag { border-radius: 5px; padding: 2px 8px; font-size: .73rem; font-weight: 600; }
    .tc-tag.level  { background: var(--accent-light); color: var(--accent); }
    .tc-tag.active { background: #d4edda; color: #155724; }
    .tc-tag.inactive { background: #f8d7da; color: #721c24; }
    .tc-actions { display: flex; justify-content: center; gap: 6px; }

    .badge { display: inline-flex; align-items: center; gap: 4px; padding: 3px 9px; border-radius: 20px; font-size: .74rem; font-weight: 700; }
    .badge-active   { background: #d4edda; color: #155724; }
    .badge-inactive { background: #e2e3e5; color: #383d41; }

    .btn-act { border: none; border-radius: 6px; padding: 5px 10px; font-size: .8rem; cursor: pointer; transition: all .15s; display: inline-flex; align-items: center; gap: 4px; font-weight: 600; }
    .btn-act:hover { filter: brightness(.88); transform: translateY(-1px); }
    .btn-act.edit { background: #fff3cd; color: #856404; }
    .btn-act.del  { background: #f8d7da; color: #721c24; }

    .no-results { text-align: center; padding: 60px 20px; color: var(--text-muted); }
    .no-results i { font-size: 3rem; margin-bottom: 12px; display: block; opacity: .35; }

    #toast { min-width: 280px; border-radius: 10px; box-shadow: 0 6px 24px rgba(0,0,0,.15); }
    #loadingOverlay { display: none; position: fixed; inset: 0; background: rgba(255,255,255,.82); z-index: 9999; place-items: center; }
    #loadingOverlay.show { display: grid; }

    .collapsible-content { overflow: hidden; transition: max-height .3s ease; }

    /* Picture preview in modal */
    #previewPicture { max-height: 160px; max-width: 100%; border-radius: 8px; display: none; margin-top: 8px; }

    @@media (max-width: 768px) {
        .filter-row { flex-direction: column; }
        .page-header { flex-direction: column; align-items: flex-start; }
    }
</style>

<!-- Loading Overlay -->
<div id="loadingOverlay">
    <div class="text-center">
        <div class="spinner-border text-primary" style="width:3rem;height:3rem;"></div>
        <div class="mt-3 fw-bold text-primary">Loading...</div>
    </div>
</div>

<!-- Toast -->
<div class="position-fixed top-0 end-0 p-3" style="z-index:11000">
    <div id="toast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1><i class="bi bi-person-badge-fill me-2"></i>Teachers</h1>
        <div class="subtitle">Manage teachers, departments, and assignments</div>
    </div>
    <button class="btn btn-light fw-bold px-4" id="btnCreateTeacher" style="border-radius:8px;">
        <i class="bi bi-plus-circle me-1"></i> Add Teacher
    </button>
</div>

<!-- Stats Bar -->
<div class="stats-bar">
    <div class="stat-card">
        <div class="stat-value" id="statTotal">0</div>
        <div class="stat-label">Total Teachers</div>
    </div>
    <div class="stat-card active">
        <div class="stat-value" id="statActive">0</div>
        <div class="stat-label">Active</div>
    </div>
    <div class="stat-card inactive">
        <div class="stat-value" id="statInactive">0</div>
        <div class="stat-label">Inactive</div>
    </div>
    <div class="stat-card depts">
        <div class="stat-value" id="statDepts">0</div>
        <div class="stat-label">Departments</div>
    </div>
</div>

<!-- Filter Panel -->
<div class="filter-panel">
    <div class="filter-title"><i class="bi bi-funnel-fill"></i> Filter Teachers</div>
    <div class="filter-row">
        <div class="filter-group" style="flex:2 1 240px;">
            <label><i class="bi bi-search"></i> Search</label>
            <input type="text" id="filterSearch" placeholder="Name or department…" />
        </div>
        <div class="filter-group">
            <label>Department</label>
            <select id="filterDept">
                <option value="">All Departments</option>
            </select>
        </div>
        <div class="filter-group">
            <label>Level</label>
            <select id="filterLevel">
                <option value="">All Levels</option>
            </select>
        </div>
        <div class="filter-group">
            <label>Status</label>
            <select id="filterStatus">
                <option value="">All</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
        </div>
        <div class="filter-group">
            <label>Group By</label>
            <select id="filterGroupBy">
                <option value="department">Department</option>
                <option value="level">Level</option>
                <option value="status">Status</option>
                <option value="none">No Grouping</option>
            </select>
        </div>
        <div style="display:flex;gap:8px;padding-bottom:1px;">
            <button class="btn-filter-reset" id="btnReset"><i class="bi bi-x-circle me-1"></i>Reset</button>
        </div>
    </div>
</div>

<!-- Results Bar & View Switcher -->
<div class="results-bar">
    <div class="results-count" id="resultsCount">Showing <strong>0</strong> teachers</div>
    <div class="view-switcher">
        <button class="view-btn active" id="btnTableView"><i class="bi bi-table"></i> Table</button>
        <button class="view-btn" id="btnCardView"><i class="bi bi-grid-3x3-gap"></i> Cards</button>
    </div>
</div>

<!-- Dynamic list -->
<div id="teacherListContainer"></div>

<!-- ═══════════════ MODAL ═══════════════ -->
<div class="modal fade" id="teacherModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius:12px;overflow:hidden;">
            <div class="modal-header" style="background:linear-gradient(135deg,#1e3a5f,#2c5282);color:#fff;">
                <h5 class="modal-title fw-bold" id="teacherModalLabel">Create Teacher</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="teacherForm" enctype="multipart/form-data" novalidate>
                    <input type="hidden" id="TeacherId" />
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-semibold">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="FullName" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Department <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Department" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Level <span class="text-danger">*</span></label>
                            <select class="form-select" id="LevelId" required>
                                <option value="">-- Select Level --</option>
                                @foreach (var level in ViewBag.LevelId as Microsoft.AspNetCore.Mvc.Rendering.SelectList)
                                {
                                    <option value="@level.Value">@level.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-semibold">Picture</label>
                            <input type="file" class="form-control" id="PictureFile" accept="image/*" />
                            <small class="text-muted">jpg, jpeg, png, gif — max 5MB</small>
                            <div class="text-center">
                                <img id="previewPicture" src="#" alt="Preview" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input type="checkbox" class="form-check-input" id="IsActive" checked />
                                <label class="form-check-label fw-semibold" for="IsActive">Active Status</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer" style="background:#f8fafc;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary fw-bold px-4" id="saveTeacherBtn">
                    <i class="bi bi-check-circle me-1"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <script>
    $(function () {

        /* ── Raw data from server ── */
        var allTeachers = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(t => new {
            teacherId   = t.TeacherId,
            fullName    = t.FullName,
            department  = t.Department,
            levelId     = t.LevelId,
            levelName   = t.Level != null ? t.Level.LevelName : "N/A",
            picturePath = t.PicturePath ?? "",
            isActive    = t.IsActive
        })));

        /* ── Build filter dropdowns from data ── */
        var allDeptNames  = {}, allLevelNames = {};
        allTeachers.forEach(function(t) {
            if (t.department) allDeptNames[t.department]   = true;
            if (t.levelName && t.levelName !== 'N/A') allLevelNames[t.levelName] = true;
        });
        Object.keys(allDeptNames).sort().forEach(function(d) {
            $('#filterDept').append(`<option value="${d}">${d}</option>`);
        });
        Object.keys(allLevelNames).sort().forEach(function(l) {
            $('#filterLevel').append(`<option value="${l}">${l}</option>`);
        });

        /* ── State ── */
        var filterState = { search: '', dept: '', level: '', status: '', groupBy: 'department' };
        var viewMode = 'table';
        var teacherModal = new bootstrap.Modal(document.getElementById('teacherModal'));

        /* ════════════ FILTERS ════════════ */
        function applyFilters() {
            var search = filterState.search.toLowerCase();
            var dept   = filterState.dept;
            var level  = filterState.level;
            var status = filterState.status;
            return allTeachers.filter(function(t) {
                if (search && !t.fullName.toLowerCase().includes(search) && !t.department.toLowerCase().includes(search)) return false;
                if (dept   && t.department !== dept)  return false;
                if (level  && t.levelName  !== level) return false;
                if (status === 'active'   && !t.isActive) return false;
                if (status === 'inactive' &&  t.isActive) return false;
                return true;
            });
        }

        /* ════════════ STATS ════════════ */
        function updateStats(filtered) {
            $('#statTotal').text(filtered.length);
            $('#statActive').text(filtered.filter(t => t.isActive).length);
            $('#statInactive').text(filtered.filter(t => !t.isActive).length);
            $('#statDepts').text(new Set(filtered.map(t => t.department)).size);
            $('#resultsCount').html(`Showing <strong>${filtered.length}</strong> teacher${filtered.length !== 1 ? 's' : ''}`);
        }

        /* ════════════ GROUPING ════════════ */
        function groupTeachers(teachers, by) {
            var groups = {};
            teachers.forEach(function(t) {
                var key = by === 'department' ? (t.department || 'No Department')
                        : by === 'level'      ? (t.levelName  || 'No Level')
                        : by === 'status'     ? (t.isActive ? 'Active' : 'Inactive')
                        : '__all__';
                if (!groups[key]) groups[key] = [];
                groups[key].push(t);
            });
            return groups;
        }

        /* ════════════ RENDER ════════════ */
        function render() {
            var filtered = applyFilters();
            updateStats(filtered);
            var $c = $('#teacherListContainer').empty();

            if (filtered.length === 0) {
                $c.html(`<div class="no-results"><i class="bi bi-person-badge"></i><div class="fw-bold">No teachers found</div><div class="small mt-1">Try adjusting your filters</div></div>`);
                return;
            }

            var groupBy = filterState.groupBy;
            var groups  = groupTeachers(filtered, groupBy);
            var icons   = { department:'bi-building', level:'bi-diagram-3-fill', status:'bi-circle-fill' };

            if (groupBy === 'none') {
                $c.append(viewMode === 'table' ? renderTable(filtered) : renderCards(filtered));
            } else {
                Object.keys(groups).sort().forEach(function(key) {
                    var items   = groups[key];
                    var groupId = 'grp_' + key.replace(/[^a-zA-Z0-9]/g,'_');
                    var icon    = icons[groupBy] || 'bi-folder-fill';
                    var $wrap   = $('<div class="mb-3"></div>');
                    $wrap.append(`
                        <div class="group-header" data-target="${groupId}">
                            <span class="group-name"><i class="bi ${icon}"></i>${key}</span>
                            <div class="group-meta">
                                <span>${items.length} teacher${items.length!==1?'s':''}</span>
                                <i class="bi bi-chevron-down group-chevron"></i>
                            </div>
                        </div>
                        <div class="collapsible-content group-table-wrapper" id="${groupId}">
                            ${viewMode === 'table' ? renderTable(items) : renderCards(items)}
                        </div>
                    `);
                    $c.append($wrap);
                });
            }

            openAllGroups();
        }

        function avatarHtml(t, size) {
            if (t.picturePath) {
                return `<img src="${t.picturePath}" alt="${t.fullName}" class="rounded-circle" style="width:${size}px;height:${size}px;object-fit:cover;" />`;
            }
            var initials = t.fullName.split(' ').map(w=>w[0]).join('').substring(0,2).toUpperCase();
            return `<div style="width:${size}px;height:${size}px;border-radius:50%;background:linear-gradient(135deg,#1e3a5f,#2e86de);color:#fff;display:inline-flex;align-items:center;justify-content:center;font-weight:800;font-size:${Math.floor(size*0.35)}px;">${initials}</div>`;
        }

        function renderTable(teachers) {
            var rows = teachers.map(function(t) {
                var statusBadge = t.isActive
                    ? '<span class="badge badge-active"><i class="bi bi-circle-fill" style="font-size:.45rem;"></i> Active</span>'
                    : '<span class="badge badge-inactive"><i class="bi bi-circle-fill" style="font-size:.45rem;"></i> Inactive</span>';
                return `<tr class="${t.isActive?'':'inactive-row'}" data-id="${t.teacherId}">
                    <td class="text-center">${avatarHtml(t, 38)}</td>
                    <td><strong>${t.fullName}</strong></td>
                    <td>${t.department}</td>
                    <td>${t.levelName}</td>
                    <td>${statusBadge}</td>
                    <td>
                        <button class="btn-act edit btn-edit" data-id="${t.teacherId}" title="Edit"><i class="bi bi-pencil-square"></i></button>
                    </td>
                </tr>`;
            }).join('');
            return `<table class="teacher-table">
                <thead><tr>
                    <th style="width:56px;">Photo</th>
                    <th>Full Name</th><th>Department</th><th>Level</th><th>Status</th>
                    <th style="width:80px;">Actions</th>
                </tr></thead>
                <tbody>${rows}</tbody>
            </table>`;
        }

        function renderCards(teachers) {
            var cards = teachers.map(function(t) {
                var avatarCard = t.picturePath
                    ? `<img src="${t.picturePath}" class="tc-avatar" alt="${t.fullName}" />`
                    : `<div class="tc-avatar-placeholder">${t.fullName.split(' ').map(w=>w[0]).join('').substring(0,2).toUpperCase()}</div>`;
                return `<div class="teacher-card ${t.isActive?'':'inactive'}" data-id="${t.teacherId}">
                    ${avatarCard}
                    <div class="tc-name">${t.fullName}</div>
                    <div class="tc-dept">${t.department}</div>
                    <div class="tc-meta">
                        <span class="tc-tag level">${t.levelName}</span>
                        <span class="tc-tag ${t.isActive?'active':'inactive'}">${t.isActive?'Active':'Inactive'}</span>
                    </div>
                    <div class="tc-actions">
                        <button class="btn-act edit btn-edit" data-id="${t.teacherId}"><i class="bi bi-pencil-square"></i> Edit</button>
                    </div>
                </div>`;
            }).join('');
            return `<div class="card-grid">${cards}</div>`;
        }

        /* ════════════ COLLAPSE ════════════ */
        $(document).on('click', '.group-header', function() {
            var $content = $('#' + $(this).data('target'));
            var $chevron = $(this).find('.group-chevron');
            if (!$content.css('max-height') || $content.css('max-height') === '0px') {
                $content.css('max-height', $content[0].scrollHeight + 'px');
                $chevron.removeClass('collapsed');
            } else {
                $content.css('max-height', '0');
                $chevron.addClass('collapsed');
            }
        });

        function openAllGroups() {
            setTimeout(function() {
                $('.collapsible-content').each(function() {
                    $(this).css('max-height', $(this)[0].scrollHeight + 50000 + 'px');
                });
            }, 50);
        }

        /* ════════════ FILTER EVENTS ════════════ */
        var searchTimer;
        $('#filterSearch').on('input', function() {
            clearTimeout(searchTimer);
            var v = $(this).val();
            searchTimer = setTimeout(function() { filterState.search = v; render(); }, 220);
        });
        $('#filterDept').on('change',    function() { filterState.dept    = $(this).val(); render(); });
        $('#filterLevel').on('change',   function() { filterState.level   = $(this).val(); render(); });
        $('#filterStatus').on('change',  function() { filterState.status  = $(this).val(); render(); });
        $('#filterGroupBy').on('change', function() { filterState.groupBy = $(this).val(); render(); });

        $('#btnReset').on('click', function() {
            filterState = { search: '', dept: '', level: '', status: '', groupBy: 'department' };
            $('#filterSearch').val('');
            $('#filterDept,#filterLevel,#filterStatus').val('');
            $('#filterGroupBy').val('department');
            render();
        });

        $('#btnTableView').on('click', function() {
            viewMode = 'table'; $(this).addClass('active'); $('#btnCardView').removeClass('active'); render();
        });
        $('#btnCardView').on('click', function() {
            viewMode = 'card'; $(this).addClass('active'); $('#btnTableView').removeClass('active'); render();
        });

        /* ════════════ TOAST / LOADING ════════════ */
        function showToast(msg, type) {
            var cls = { success:'bg-success text-white', danger:'bg-danger text-white', warning:'bg-warning text-dark' };
            $('#toast').removeClass('bg-success bg-danger bg-warning text-white text-dark').addClass(cls[type||'success']);
            $('#toastMessage').text(msg);
            new bootstrap.Toast($('#toast')[0], { autohide:true, delay:4500 }).show();
        }
        function showLoading(v) { v ? $('#loadingOverlay').addClass('show') : $('#loadingOverlay').removeClass('show'); }

        /* ════════════ IMAGE PREVIEW ════════════ */
        $('#PictureFile').on('change', function() {
            var file = this.files[0];
            if (!file) { $('#previewPicture').hide(); return; }
            if (file.size > 5 * 1024 * 1024) { showToast('File size must not exceed 5MB', 'danger'); $(this).val(''); $('#previewPicture').hide(); return; }
            var allowed = ['image/jpeg','image/jpg','image/png','image/gif'];
            if (!allowed.includes(file.type)) { showToast('Only image files allowed (jpg, jpeg, png, gif)', 'danger'); $(this).val(''); $('#previewPicture').hide(); return; }
            $('#previewPicture').attr('src', URL.createObjectURL(file)).show();
        });

        /* ════════════ CREATE ════════════ */
        $('#btnCreateTeacher').on('click', function() {
            $('#teacherModalLabel').text('Create Teacher');
            $('#teacherForm')[0].reset();
            $('#TeacherId').val('');
            $('#IsActive').prop('checked', true);
            $('#previewPicture').hide();
            teacherModal.show();
        });

        /* ════════════ EDIT ════════════ */
        $(document).on('click', '.btn-edit', function() {
            var id = $(this).data('id');
            showLoading(true);
            $.get(`/api/TeachersApi/${id}`, function(res) {
                showLoading(false);
                if (!res.success) { showToast(res.message, 'danger'); return; }
                var d = res.data;
                $('#teacherModalLabel').text('Edit Teacher');
                $('#teacherForm')[0].reset();
                $('#TeacherId').val(d.teacherId);
                $('#FullName').val(d.fullName);
                $('#Department').val(d.department);
                $('#LevelId').val(d.levelId || '');
                $('#IsActive').prop('checked', d.isActive);
                if (d.picturePath) {
                    $('#previewPicture').attr('src', d.picturePath).show();
                } else {
                    $('#previewPicture').hide();
                }
                teacherModal.show();
            }).fail(function() { showLoading(false); showToast('Failed to load teacher.', 'danger'); });
        });

        /* ════════════ SAVE ════════════ */
        $('#saveTeacherBtn').on('click', function() {
            var teacherId = $('#TeacherId').val();
            var isEdit    = !!teacherId;

            if (!$('#FullName').val().trim())    { showToast('Full Name is required', 'danger'); return; }
            if (!$('#Department').val().trim())  { showToast('Department is required', 'danger'); return; }
            if (!$('#LevelId').val())            { showToast('Level is required', 'danger'); return; }

            var formData = new FormData();
            formData.append('fullName',   $('#FullName').val().trim());
            formData.append('department', $('#Department').val().trim());
            formData.append('levelId',    $('#LevelId').val());
            formData.append('isActive',   $('#IsActive').is(':checked'));
            var pic = $('#PictureFile')[0].files[0];
            if (pic) formData.append('pictureFile', pic);

            showLoading(true);
            $.ajax({
                url:  isEdit ? `/api/TeachersApi/${teacherId}` : '/api/TeachersApi',
                type: isEdit ? 'PUT' : 'POST',
                data: formData, processData: false, contentType: false,
                success: function(res) {
                    showLoading(false);
                    if (!res.success) { showToast(res.message, 'danger'); return; }
                    var d = res.data;
                    var levelName = d.level ? d.level.name : (d.levelName || 'N/A');
                    if (isEdit) {
                        var idx = allTeachers.findIndex(t => t.teacherId === d.teacherId);
                        if (idx > -1) allTeachers[idx] = {
                            teacherId: d.teacherId, fullName: d.fullName, department: d.department,
                            levelId: d.levelId, levelName: levelName,
                            picturePath: d.picturePath || '', isActive: d.isActive
                        };
                    } else {
                        allTeachers.push({
                            teacherId: d.teacherId, fullName: d.fullName, department: d.department,
                            levelId: d.levelId, levelName: levelName,
                            picturePath: d.picturePath || '', isActive: d.isActive
                        });
                        /* Update filter dropdowns if new dept/level */
                        if (d.department && !allDeptNames[d.department]) {
                            allDeptNames[d.department] = true;
                            $('#filterDept').append(`<option value="${d.department}">${d.department}</option>`);
                        }
                        if (levelName && levelName !== 'N/A' && !allLevelNames[levelName]) {
                            allLevelNames[levelName] = true;
                            $('#filterLevel').append(`<option value="${levelName}">${levelName}</option>`);
                        }
                    }
                    render();
                    showToast(res.message, 'success');
                    teacherModal.hide();
                },
                error: function(xhr) {
                    showLoading(false);
                    showToast((xhr.responseJSON && xhr.responseJSON.message) || 'Failed to save teacher!', 'danger');
                }
            });
        });

        /* ─ Initial render ─ */
        render();
    });
    </script>
}
