@model List<Teacher_Evaluation_System__Golden_Success_College_.Models.Question>
@{
    ViewData["Title"] = "Details";
    Layout = "_Layoutadmin";
}
<h1>Details</h1>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Criteria
        </dt>
        <dd class="col-sm-10">
            @Model.First().Criteria.Name
        </dd>
        <dt class="col-sm-2">
            Descriptions
        </dt>
        <dd class="col-sm-10">
            <ol>
                @foreach (var question in Model)
                {
                    <li>@question.Description</li>
                }
            </ol>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.First().QuestionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>